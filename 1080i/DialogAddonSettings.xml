<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">3</defaultcontrol>
	<include>Animation_Dialog_Popup_Window</include>
	<controls>
		<control type="group">
			<include content="Dialog_Background">
				<param name="width" value="1510" />
				<param name="height" value="790" />

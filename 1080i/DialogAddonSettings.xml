			</control>
			<control type="button" id="7">
				<include>Dialog_Button_Wide</include>
			</control>
			<control type="radiobutton" id="8">
				<include>Dialog_RadioButton_Wide</include>
			</control>
			<control type="spincontrolex" id="9">

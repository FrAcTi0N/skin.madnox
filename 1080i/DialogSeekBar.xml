<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric)</visible>
	<visible>!Window.IsActive(sliderdialog)</visible>
	<visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
	<zorder>0</zorder>
	<controls>
		<include>Dialog_Furniture_Close_Onclick</include>
		<control type="group">
			<include content="Animation_Slide_Bottom">
				<param name="slide">220</param>
			</include>
			<top>870</top>
			<control type="image">
				<top>-10</top>
				<width>1920</width>
				<height>20</height>
				<texture colordiffuse="$VAR[GlowColorVar]">dialogs/glow-bottom.png</texture>
			</control>
			<control type="image">
				<width>1920</width>
				<height>210</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="15">dialogs/osd-back.png</texture>
			</control>
			<control type="group">
				<bottom>0</bottom>
				<width>1920</width>
				<height>40</height>
				<control type="progress">
					<centerleft>50%</centerleft>
					<bottom>59</bottom>
					<width>1862</width>
					<info>Player.ProgressCache</info>
					<texturebg border="8">dialogs/progress-control/progress-back.png</texturebg>
					<midtexture border="8">dialogs/progress-control/progress-mid-cache.png</midtexture>
				</control>
				<control type="progress">
					<centerleft>50%</centerleft>
					<bottom>59</bottom>
					<width>1862</width>
					<texturebg border="8">dialogs/progress-control/progress-back-cache.png</texturebg>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="401">
					<centerleft>50%</centerleft>
					<bottom>59</bottom>
					<width>1862</width>
					<height>20</height>
					<texturesliderbar />
					<textureslidernib />
					<textureslidernibfocus />
				</control>
				<control type="label">
					<left>30</left>
					<bottom>20</bottom>
					<width>400</width>
					<height>40</height>
					<align>left</align>
					<font>Font26_Reg</font>
					<textcolor>grey</textcolor>
					<label>$INFO[Player.Time(hh:mm:ss),, / ]$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
				<control type="label">
					<right>30</right>
					<bottom>20</bottom>
					<width>400</width>
					<height>40</height>
					<align>right</align>
					<font>Font26_Reg</font>
					<textcolor>grey</textcolor>
					<label>$INFO[System.Time,, / ]$INFO[Player.FinishTime]</label>
				</control>
				<control type="label">
				    <centerleft>50%</centerleft>
					<bottom>20</bottom>
					<width>1100</width>
					<height>40</height>
					<align>center</align>
					<font>Font26_Reg</font>
					<textcolor>grey</textcolor>
					<label>$VAR[SeekLabelVar]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
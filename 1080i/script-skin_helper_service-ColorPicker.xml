<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3110</defaultcontrol>
	<include>Animation_Dialog_Popup_Window</include>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(DialogSelect.xml) + !Window.IsActive(virtualkeyboard) + !Window.IsActive(DialogNumeric.xml)</visible>
			<include>Animation_Dialog_Popup_Visible</include>
			<include content="Dialog_Background">
				<param name="width" value="950" />
				<param name="height" value="510" />
			</include>
			<!-- Left -->
			<control type="grouplist" id="9">
				<left>20</left>
				<top>90</top>
				<width>350</width>
				<height>420</height>
				<onright>3110</onright>
				<!-- Edit manual -->
				<control type="button" id="3010">
					<label>$ADDON[script.skin.helper.colorpicker 32050]</label>
					<include>Dialog_Button_ColorPicker</include>
				</control>
				<!-- Opacity slider -->
				<control type="slider" id="3015">
					<include>Dialog_Button_ColorPicker</include>
					<texturesliderbar />
					<textureslidernib />
					<textureslidernibfocus />
				</control>
				<!-- Choose color palette -->
				<control type="button" id="3030">
					<label>$ADDON[script.skin.helper.colorpicker 32141]</label>
					<include>Dialog_Button_ColorPicker</include>
				</control>
				<!-- Save button -->
				<control type="button" id="3012">
					<label>$LOCALIZE[732]</label>
					<include>Dialog_Button_ColorPicker</include>
				</control>
				<!-- None (reset) -->
				<control type="button" id="3011">
					<label>$LOCALIZE[13007]</label>
					<include>Dialog_Button_ColorPicker</include>
				</control>
			</control>
			<control type="image">
				<left>370</left>
				<top>90</top>
				<width>4</width>
				<height>348</height>
				<texture colordiffuse="$VAR[PanelColorVar]">panels/line-vertical-dark.png</texture>
			</control>
			<!-- Slider Focus -->
			<control type="group">
				<left>20</left>
				<top>160</top>
				<height>70</height>
				<control type="label">
					<textcolor>$VAR[DialogFocusTextColorVar]</textcolor>
					<include>Dialog_Button_ColorPicker</include>
					<label>$ADDON[script.skin.helper.colorpicker 32049]$INFO[Control.Getlabel(3015), ]</label>
					<visible>Control.HasFocus(3015)</visible>
				</control>
				<control type="label">
					<include>Dialog_Button_ColorPicker</include>
					<label>$ADDON[script.skin.helper.colorpicker 32049]$INFO[Control.Getlabel(3015), ]</label>
					<textcolor>grey</textcolor>
					<visible>!Control.HasFocus(3015)</visible>
				</control>
				<control type="image">
					<width>350</width>
					<texture colordiffuse="$VAR[DialogHighlightColorVar]" border="10">buttons/list-select-focus.png</texture>
					<visible>Control.HasFocus(3015)</visible>
				</control>
				<control type="image">
					<width>350</width>
					<texture colordiffuse="$VAR[PanelColorVar]" border="30">buttons/list-select-nofocus.png</texture>
					<visible>!Control.HasFocus(3015)</visible>
				</control>
			</control>
			<!-- Color picker panel -->
			<control type="panel" id="3110">
				<left>385</left>
				<top>100</top>
				<width>498</width>
				<height>332</height>
				<pagecontrol>60</pagecontrol>
				<onleft>9</onleft>
				<onright>60</onright>
				<onup>8000</onup>
				<preloaditems>4</preloaditems>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="83" width="83">
					<control type="image">
						<width>78</width>
						<height>78</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="83" width="83">
					<control type="group">
						<animation effect="zoom" time="200" tween="sine" easing="inout" start="100" end="130" center="auto">Focus</animation>
						<control type="image">
							<width>78</width>
							<height>78</height>
							<texture border="5">$INFO[ListItem.Icon]</texture>
							<bordertexture border="5">colors/black.png</bordertexture>
							<bordersize>5</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="label">
				<bottom>20</bottom>
				<right>70</right>
				<width>460</width>
				<height>50</height>
				<align>right</align>
				<font>Font25_Cond</font>
				<textcolor>$VAR[DialogSubTextColorVar]</textcolor>
				<label>$INFO[Container(3110).NumItems,, $LOCALIZE[14078]]$INFO[Container(3110).CurrentPage, - $LOCALIZE[31000] (]$INFO[Container(3110).NumPages,/,)]</label>
			</control>
			<control type="label">
				<bottom>20</bottom>
				<left>66</left>
				<width>460</width>
				<height>50</height>
				<font>Font25_Cond</font>
				<textcolor>grey</textcolor>
				<label>[COLOR $INFO[Window.Property(colorstring)]]$INFO[Window.Property(colorstring), ][/COLOR]</label>
			</control>
			<control type="grouplist" id="8000">
				<right>60</right>
				<top>20</top>
				<width>400</width>
				<onleft>3110</onleft>
				<onright>60</onright>
				<ondown>3110</ondown>
				<align>right</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include content="Dialog_Button_TopRight">
					<param name="id">9002</param>
					<param name="label">$LOCALIZE[222]</param>
					<param name="onclick">Action(close)</param>
				</include>
			</control>
			<control type="scrollbar" id="60">
				<onleft>3110</onleft>
				<left>352</left>
				<top>90</top>
				<bottom>70</bottom>
			</control>
		</control>
	</controls>
</window>
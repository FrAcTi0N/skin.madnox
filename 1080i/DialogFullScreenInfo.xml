<?xml version="1.0" encoding="utf-8"?>
<window>
	<controls>
        <!-- Non Live TV Content --> 
		<control type="group" id="9000">
			<visible>!VideoPlayer.Content(LiveTV)</visible>
			<include>Animation_CommonFade</include>
			<control type="group">
				<top>320</top>
				<left>55</left>
				<!-- Left: Poster or Thumb -->
				<control type="group">
					<visible>!VideoPlayer.Content(musicvideos)</visible>
					<control type="image">
						<top>10</top>
						<width>300</width>
						<height>450</height>
						<fadetime>400</fadetime>
						<bordersize>15</bordersize>
						<aspectratio aligny="bottom">keep</aspectratio>
						<bordertexture border="30">thumbs/poster-frame.png</bordertexture>
						<texture diffuse="thumbs/poster-mask.png" background="true">$VAR[VideoPlayerPosterVar]</texture>
					</control>
					<control type="image">
						<bottom>-851</bottom>
						<width>300</width>
						<height>450</height>
						<fadetime>TextureFadeTime</fadetime>
						<bordersize>15</bordersize>
						<aspectratio aligny="top">keep</aspectratio>
						<texture flipy="true" diffuse="thumbs/poster-flipmask.png" background="true">$VAR[VideoPlayerPosterVar]</texture>
					</control>
				</control>
				<control type="group">
					<visible>VideoPlayer.Content(musicvideos)</visible>
					<control type="image">
						<top>10</top>
						<width>450</width>
						<height>450</height>
						<fadetime>400</fadetime>
						<bordersize>15</bordersize>
						<aspectratio aligny="top">scale</aspectratio>
						<bordertexture border="30">thumbs/poster-frame.png</bordertexture>
						<texture diffuse="thumbs/poster-mask.png" background="true">$VAR[VideoPlayerPosterVar]</texture>
					</control>
					<control type="image">
						<bottom>-603</bottom>
						<width>450</width>
						<height>450</height>
						<fadetime>TextureFadeTime</fadetime>
						<bordersize>15</bordersize>
						<aspectratio aligny="top">scale</aspectratio>
						<texture flipy="true" diffuse="thumbs/poster-flipmask.png" background="true">$VAR[VideoPlayerPosterVar]</texture>
					</control>
				</control>
				<!-- Right: DiscArt, Clearart or Clearlogo -->
				<control type="image">
					<top>60</top>
					<left>1450</left>
					<width>350</width>
					<height>350</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture>$VAR[VideoPlayerArtworkVar]</texture>
					<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="image">
					<top>60</top>
					<left>1450</left>
					<width>350</width>
					<height>350</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture>$VAR[VideoPlayerDiscArtVar]</texture>
					<visible>VideoPlayer.Content(musicvideos)</visible>
				</control>
                <!-- Middle: Info  -->	
				<control type ="image">
   				    <left>13</left>
					<top>23</top>
					<width>1790</width>
					<height>425</height>
                    <texture colordiffuse="FF000000">colors/white50.png</texture>
				</control>
				<control type="grouplist">
				    <left>305</left>
					<top>30</top>
					<width>1120</width>
					<height>450</height>
					<itemgap>10</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<height>80</height>
						<alingy>top</alingy>
						<font>Font80_Bold</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>$INFO[Player.Title]</label>
						<visible>VideoPlayer.Content(movies)</visible>
					</control>
					<control type="label">
						<height>80</height>
						<alingy>top</alingy>
						<font>Font80_Bold</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>$INFO[VideoPlayer.TvShowTitle]</label>
						<visible>VideoPlayer.Content(episodes)</visible>
					</control>
					<control type="label">
						<left>155</left>
						<height>80</height>
						<aligny>top</aligny>
						<font>Font80_Bold</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>$INFO[Player.Title]</label>
						<visible>VideoPlayer.Content(musicvideos)</visible>
					</control>
					<control type="label">
                        <height>65</height>
						<font>Font33_Bold</font>
                        <label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.Genre,  •  ]$VAR[VideoPlayerTop250Var]</label>
                        <visible>VideoPlayer.Content(movies)</visible>
                    </control>
					<control type="label">
						<height>65</height>
						<font>Font33_Bold</font>
						<label>$INFO[VideoPlayer.Season,$LOCALIZE[20373]: ] - $INFO[VideoPlayer.Episode,$LOCALIZE[20359]: ]   •   $INFO[VideoPlayer.Premiered,$LOCALIZE[31072]: ]</label>
						<visible>VideoPlayer.Content(episodes)</visible>
					</control>
					<control type="label">
					    <left>155</left>
					    <height>65</height>
						<alingy>bottom</alingy>
						<font>Font33_Bold</font>
                        <label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.Genre,  •  ]</label>
                        <visible>VideoPlayer.Content(musicvideos)</visible>
                    </control>
					<control type="label">
					    <height>65</height>
						<font>Font33_Bold</font>
						<textcolor>$VAR[HighlightColorVar]</textcolor>
                        <label>$INFO[VideoPlayer.Title]</label>
                        <visible>VideoPlayer.Content(episodes)</visible>
                    </control>					
					<control type="label">
					    <height>65</height>
						<font>Font33_Bold</font>
						<textcolor>$VAR[HighlightColorVar]</textcolor>
                        <label>$INFO[VideoPlayer.Tagline]</label>
                        <visible>VideoPlayer.Content(movies) + !String.IsEmpty(VideoPlayer.Tagline)</visible>
                    </control>
					<control type="label">
					    <left>155</left>
					    <height>65</height>
						<font>Font33_Bold</font>
						<textcolor>$VAR[HighlightColorVar]</textcolor>
                        <label>$INFO[VideoPlayer.Artist]</label>
                        <visible>VideoPlayer.Content(musicvideos)</visible>
					</control>
                    <control type="textbox" id="400">
					    <width>1120</width>
						<height>170</height>
						<label>$INFO[VideoPlayer.Plot]</label>
						<align>justify</align>
						<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
						<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
					</control>
					<control type="textbox" id="401">
						<left>155</left>
						<width>1120</width>
						<height>170</height>
						<label>$INFO[VideoPlayer.Plot]</label>
						<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
						<visible>VideoPlayer.Content(musicvideos)</visible>
					</control> 					
				</control>
			</control>	
		</control>
	</controls>
</window>
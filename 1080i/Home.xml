<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<onload condition="!System.HasAddon(script.skinshortcuts)">InstallAddon(script.skinshortcuts)</onload>
	<onload condition="!System.HasAddon(script.skin.helper.service)">InstallAddon(script.skin.helper.service)</onload>
	<onload condition="!System.HasAddon(script.skin.helper.widgets)">InstallAddon(script.skin.helper.widgets)</onload>
	<onload condition="!System.HasAddon(script.skin.helper.colorpicker)">InstallAddon(script.skin.helper.colorpicker)</onload>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=2&amp;group=mainmenu|quicknav)</onload>

	<controls>
		<!-- Backdrop -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[HomeFanartVar]</param>
		</include>
		<control type="list" id="43260">
			<posx>0</posx>
			<posy>0</posy>
			<width>1</width>
			<height>1</height>
			<focusedlayout/>
			<itemlayout/>
			<content>$VAR[PlaylistStatsContentVar]</content>
			<visible>String.IsEqual(Container(9000).ListItem.Property(InfoLine),playlist)</visible>
			
		</control>
		<control type="group">
			<visible>[Player.HasAudio + !Skin.HasSetting(NowplayingHomeDisableAudio)] | [Player.HasVideo + !Skin.HasSetting(NowplayingHomeDisableVideo)]</visible>
			<visible>!ControlGroup(90010).HasFocus</visible>
			<include>Animation_VisibleFade</include>
			<include content="Animation_Slide_Top_Window">
				<param name="opencondition">Skin.String(WidgetPosition,belowmenu) | !Skin.String(WidgetPosition)</param>
				<param name="closecondition">Skin.String(WidgetPosition,belowmenu) | !Skin.String(WidgetPosition)</param>
			</include>
			<include content="Animation_Slide_Bottom_Window">
				<param name="opencondition">Skin.String(WidgetPosition,abovemenu) | Skin.String(WidgetPosition,Top)</param>
				<param name="closecondition">Skin.String(WidgetPosition,abovemenu) | Skin.String(WidgetPosition,Top)</param>
			</include>
			<include>HomeNowPlaying</include>
		</control>
		

		<!-- Widgets -->
		<control type="group" id="90010">
			<include content="Animation_Slide_Bottom_Window">
				<param name="opencondition">Skin.String(WidgetPosition,belowmenu) | !Skin.String(WidgetPosition)</param>
				<param name="closecondition">Skin.String(WidgetPosition,belowmenu) | !Skin.String(WidgetPosition)</param>
			</include>
			<include content="Animation_Slide_Top_Window">
				<param name="opencondition">Skin.String(WidgetPosition,abovemenu) | Skin.String(WidgetPosition,Top)</param>
				<param name="closecondition">Skin.String(WidgetPosition,abovemenu) | Skin.String(WidgetPosition,Top)</param>
			</include>
			<animation effect="fade" start="100" end="0" time="0" condition="!String.IsEmpty(Container(9000).ListItem.Property(widgetHide)) + !ControlGroup(90010).HasFocus">Conditional</animation>

			<!-- <animation effect="slide" end="0,362" time="200" condition="String.IsEmpty(Skin.String(WidgetPosition))">Conditional</animation>
			<animation effect="slide" end="0,41" time="200" condition="!String.IsEqual(Skin.String(WidgetPosition),belowmenu) + Skin.HasSetting(InfoBarTop) + [!Skin.HasSetting(InfoBarLeftDisable) | !Skin.HasSetting(InfoBarDisableWeather) | !Skin.HasSetting(InfoBarDisableDate) | !Skin.HasSetting(InfoBarDisableTime)]">Conditional</animation>
			<animation effect="slide" end="0,596" time="200" condition="String.IsEqual(Skin.String(WidgetPosition),belowmenu)">Conditional</animation>
			<animation effect="slide" end="0,41" time="200" condition="String.IsEqual(Skin.String(WidgetPosition),belowmenu) + !system.getbool(lookandfeel.enablerssfeeds)">Conditional</animation> -->

			<!-- The visibility condition causes a quick flash of the widgets between menu items -->
			<!-- <visible>!String.IsEmpty(Container(9000).ListItem.Property(widgetName))</visible> -->

			<include>skinshortcuts-template-widget1</include>
		</control>

		<include>InfoTimeBar</include>
		<include>RSSShortcuts</include>

		<!-- Menu -->
		<control type="group">
			<animation effect="slide" end="0,-41" time="200" condition="!Skin.String(WidgetPosition,belowmenu) + Skin.HasSetting(InfoBarLeftDisable) + Skin.HasSetting(InfoBarDisableWeather) + Skin.HasSetting(InfoBarDisableDate) + Skin.HasSetting(InfoBarDisableTime)">Conditional</animation>
			<animation effect="slide" end="0,-362" time="200" condition="Skin.String(WidgetPosition,abovemenu)">Conditional</animation>
			<animation effect="slide" end="0,-393" time="200" condition="Skin.String(WidgetPosition,belowmenu)">Conditional</animation>
			<animation effect="slide" end="0,41" time="200" condition="Skin.String(WidgetPosition,belowmenu) + !system.getbool(lookandfeel.enablerssfeeds)">Conditional</animation>
			<include condition="!Skin.HasSetting(MainMenuFixedList)">MainMenu</include>
			<include condition="Skin.HasSetting(MainMenuFixedList)" content="MainMenu">
				<param name="listtype">fixedlist</param>
			</include>
		</control>



		



		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<visible>!String.IsEqual(Skin.String(KioskMode),HideOptions) + !String.IsEqual(Skin.String(KioskMode),HideMenu)</visible>
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<usecontrolcoords>true</usecontrolcoords>
				<onright>9000</onright>
				<onback>9000</onback>
				<!-- Menu -->
				<control type="radiobutton" id="9051">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/menu.png" />
						<param name="iconoff" value="icons/mediamenu/menu.png" />
					</include>
					<label>$LOCALIZE[31017]</label>
					<onclick>RunScript(script.skinshortcuts,type=manage&amp;group=mainmenu)</onclick>
				</control>
				<control type="radiobutton" id="9052">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/settings.png" />
						<param name="iconoff" value="icons/mediamenu/settings.png" />
					</include>
					<label>$LOCALIZE[33061]</label>
					<onclick>SetProperty(MediaMenuSelect,menu,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9053">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/info.png" />
						<param name="iconoff" value="icons/mediamenu/info.png" />
					</include>
					<label>$LOCALIZE[29915]</label>
					<onclick>SetProperty(MediaMenuSelect,info,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9054">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/widgets.png" />
						<param name="iconoff" value="icons/mediamenu/widgets.png" />
					</include>
					<label>$LOCALIZE[31039]</label>
					<onclick>SetProperty(MediaMenuSelect,widgets,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9055">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/play.png" />
						<param name="iconoff" value="icons/mediamenu/play.png" />
					</include>
					<label>$LOCALIZE[31002]</label>
					<onclick>SetProperty(MediaMenuSelect,nowplaying,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9056">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/colors.png" />
						<param name="iconoff" value="icons/mediamenu/colors.png" />
					</include>
					<label>$LOCALIZE[14078]</label>
					<onclick>SetProperty(MediaMenuSelect,colors,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9057">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/reset.png" />
						<param name="iconoff" value="icons/mediamenu/reset.png" />
					</include>
					<label>$LOCALIZE[31018]</label>
					<onclick>RunScript(script.skinshortcuts,type=resetall)</onclick>
				</control>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>
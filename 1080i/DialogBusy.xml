<?xml version="1.0" encoding="utf-8"?>
<window>
	<include>OpenClose_Fade</include>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture colordiffuse="FF000000">colors/white50.png</texture>
		</control>
		<control type="group">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>100</width>
			<height>100</height>
			<control type="image">
				<animation effect="rotate" end="-360" center="auto" time="2000" loop="true" condition="true">Conditional</animation>
				<texture colordiffuse="$VAR[HighlightColorVar]">dialogs/spinner.png</texture>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window id="1112" type="dialog">
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<include>Dialog_Furniture_BackgroundFade</include>
		<include>Dialog_Furniture_Close_Onclick</include>
		<control type="group">
			<include>Animation_Dialog_Popup</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>500</width>
			<height>360</height>
			<control type="image">
				<top>-20</top>
				<width>500</width>
				<height>360</height>
				<texture colordiffuse="$VAR[GlowColorVar]" border="40">dialogs/dialog-glow.png</texture>
			</control>
			<control type="image">
				<top>-20</top>
				<width>500</width>
				<height>360</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="40">dialogs/dialog-back.png</texture>
			</control>
			<control type="image">
				<top>2</top>
				<left>20</left>
				<width>460</width>
				<height>40</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="30">buttons/list-select-nofocus.png</texture>
			</control>
			<control type="grouplist" id="100">
				<top>40</top>
				<bottom>20</bottom>
				<left>20</left>
				<width>460</width>
				<height>240</height>
				<control type="button" id="101">
					<label>Library</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="System.hasAddon(script.globalsearch)">RunScript(script.globalsearch)</onclick>
					<onclick condition="!System.hasAddon(script.globalsearch)">InstallAddon(script.globalsearch)</onclick>
					<include>Dialog_Button_ContextMenu</include>
				</control>
				<control type="button" id="102">
					<label>Addons</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick>ActivateWindow(addonbrowser,addons://search/,return)</onclick>
					<include>Dialog_Button_ContextMenu</include>
				</control>
				<control type="button" id="103">
					<label>Youtube</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="System.hasAddon(plugin.video.youtube)">ActivateWindow(videos,"plugin://plugin.video.youtube/kodion/search/list/",return)</onclick>
					<onclick condition="!System.hasAddon(plugin.video.youtube)">InstallAddon(plugin.video.youtube)</onclick>
					<include>Dialog_Button_ContextMenu</include>
				</control>
				<control type="button" id="104">
					<label>MovieDB</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="System.hasAddon(script.extendedinfo)">RunScript(script.extendedinfo,info=moviedbbrowser,search=True)</onclick>
					<onclick condition="!System.hasAddon(script.extendedinfo)">InstallAddon(script.extendedinfo)</onclick>
					<include>Dialog_Button_ContextMenu</include>
				</control>
			</control>
		</control>
	</controls>
</window>
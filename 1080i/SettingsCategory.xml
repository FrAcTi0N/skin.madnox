<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<include condition="Window.IsActive(interfacesettings)">onunload_SkinSettings</include>
	<controls>
		<!-- Background -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[SystemBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Default</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<include content="Panel_Side">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<!-- Left menu -->
			<control type="label" id="2">
				<include>Settings_LeftLabel</include>
			</control>
			<control type="grouplist" id="3">
				<left>100</left>
				<top>200</top>
				<width>324</width>
				<height>603</height>
				<onleft>9050</onleft>
				<onright>5</onright>
			</control>
			<control type="button" id="10">
				<include>Settings_LeftButton</include>
			</control>
			<!-- Right menu -->
			<control type="label">
				<label>$LOCALIZE[33063]</label>
				<include>Settings_RightLabel</include>
			</control>
			<control type="grouplist" id="5">
				<left>425</left>
				<top>200</top>
				<width>1395</width>
				<height>615</height>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
			</control>
			<control type="textbox" id="6">
				<description>description area</description>
				<left>460</left>
				<bottom>120</bottom>
				<width>1325</width>
				<height>130</height>
				<font>Font28_Reg</font>
				<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
			</control>
			<control type="label" id="14">
				<description>Default Label</description>
				<width>1395</width>
				<textoffsetx>35</textoffsetx>
				<height>67</height>
				<align>left</align>
				<font>Font28_Bold</font>
				<textcolor>$VAR[PanelHighlightColorVar]</textcolor>
				<shadowcolor>shadow</shadowcolor>
			</control>
			<control type="scrollbar" id="60">
				<right>80</right>
				<top>200</top>
				<bottom>280</bottom>
				<onleft>5</onleft>
			</control>
		</control>
		<control type="button" id="7">
			<include>Settings_Button</include>
		</control>
		<control type="radiobutton" id="8">
			<include>Settings_RadioButton</include>
		</control>
		<control type="spincontrolex" id="9">
			<include>Settings_Button</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$LOCALIZE[13000]$INFO[Control.GetLabel(2), / ]</param>
				<param name="breadcrumbs_icon">settings.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>3</onright>
				<onback>3</onback>
				<include>MediaMenu_System</include>
				<control type="radiobutton" id="20">
					<include content="MediaMenu_Icon_Button">
						<param name="id">9052</param>
						<param name="iconon" value="icons/mediamenu/level.png" />
						<param name="iconoff" value="icons/mediamenu/level.png" />
					</include>
					<onclick>SettingsLevelChange</onclick>
				</control>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Backdrop -->
		<control type="group">
			<visible>Window.IsVisible(musicplaylist)</visible>
			<include content="Background_Default">
				<param name="imagepath">$VAR[MusicBackgroundVar]</param>
				<param name="backgroundcolor">MusicBackground.Color.base</param>
			</include>
		</control>
		<control type="group">
			<visible>Window.IsVisible(videoplaylist)</visible>
			<include content="Background_Default">
				<param name="imagepath">$VAR[VideoBackgroundVar]</param>
				<param name="backgroundcolor">MusicBackground.Color.base</param>
			</include>
		</control>
		<!-- Floor -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Right</include>
		</control>
		<!-- Views -->
		<control type="group">
			<include>View_50_List</include>
		</control>
		<!-- Media flags -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<animation effect="slide" end="90,11" time="240" tween="cubic" condition="Control.IsVisible(511)">Conditional</animation>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">111</param>
			</include>
			<include>MediaFlags_Right</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(VideoHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$VAR[BreadcrumbsVideoVar]</param>
				<param name="breadcrumbs_icon">playlist.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenu_Common_Top</include>
				<!-- Shuffle -->
				<control type="radiobutton" id="20">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/random.png" />
						<param name="iconoff" value="icons/mediamenu/randomoff.png" />
					</include>
					<label>$LOCALIZE[590]</label>
					<visible>Control.IsEnabled(20)</visible>
				</control>
				<!-- Repeat -->
				<control type="radiobutton" id="26">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/repeat.png" />
						<param name="iconoff" value="icons/mediamenu/repeat.png" />
					</include>
					<visible>Control.IsEnabled(26)</visible>
				</control>
				<!-- Save -->
				<control type="radiobutton" id="21">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/save.png" />
						<param name="iconoff" value="icons/mediamenu/save.png" />
					</include>
					<label>$LOCALIZE[190]</label>
					<visible>Control.IsEnabled(21)</visible>
				</control>
				<!-- Clear -->
				<control type="radiobutton" id="22">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/clear.png" />
						<param name="iconoff" value="icons/mediamenu/clear.png" />
					</include>
					<label>$LOCALIZE[192]</label>
					<visible>Control.IsEnabled(22)</visible>
				</control>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Background -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[SystemBackgroundVar]</param>
			<param name="opencondition">!Window.Previous(settings)</param>
			<param name="closecondition">!Window.Next(settings)</param>
			<param name="backgroundcolor">SystemBackground.Color.base</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
				<param name="opencondition">!Window.Previous(settings)</param>
				<param name="closecondition">!Window.Next(settings)</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Default</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<include content="Panel_Side">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<!-- Left menu -->
			<control type="label">
				<label>$LOCALIZE[13200]</label>
				<include>Settings_LeftLabel</include>
			</control>
			<control type="list" id="8000">
				<left>100</left>
				<top>200</top>
				<width>324</width>
				<height>612</height>
				<onleft>9050</onleft>
				<onright>8010</onright>
				<itemlayout height="67">
					<control type="label">
						<include>Settings_LeftButton</include>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="67">
					<control type="image">
						<texture border="10" colordiffuse="$VAR[HighlightColorVar]">buttons/list-select-focus.png</texture>
						<animation effect="fade" start="100" end="50" time="40" condition="!Control.HasFocus(8000)">Conditional</animation>
					</control>
					<control type="label">
						<include>Settings_LeftButton</include>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>$LOCALIZE[128]</label>
					</item>
					<item id="2">
						<label>$LOCALIZE[13200]</label>
					</item>
				</content>
			</control>
			<!-- Right menu -->
			<control type="label">
				<label>$LOCALIZE[33063]</label>
				<include>Settings_RightLabel</include>
			</control>
			<control type="group" id="8010">
				<control type="grouplist" id="8001">
					<visible>Container(8000).Hasfocus(1)</visible>
					<left>425</left>
					<top>200</top>
					<width>1395</width>
					<height>737</height>
					<onleft>8000</onleft>
					<control type="radiobutton" id="4">
						<label>$LOCALIZE[20096]</label>
						<include>Settings_RadioButton</include>
					</control>
					<control type="button" id="5">
						<label>$LOCALIZE[33084]</label>
						<label2>$INFO[System.ProfileAutoLogin]</label2>
						<include>Settings_Button</include>
						<enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable>
					</control>
				</control>
				<control type="panel" id="2">
					<visible>Container(8000).Hasfocus(2)</visible>
					<left>425</left>
					<top>200</top>
					<width>1395</width>
					<height>737</height>
					<pagecontrol>60</pagecontrol>
					<onleft>8000</onleft>
					<onright>60</onright>
					<itemlayout height="67">
						<control type="image">
							<texture border="30" colordiffuse="$VAR[PanelColorVar]">buttons/list-select-nofocus.png</texture>
						</control>
						<control type="label">
							<left>45</left>
							<width>800</width>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<right>45</right>
							<width>440</width>
							<align>right</align>
							<textcolor>grey</textcolor>
							<label fallback="20113">$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>
					<focusedlayout height="67">
						<control type="image">
							<texture border="10" colordiffuse="$VAR[HighlightColorVar]">buttons/list-select-focus.png</texture>
							<animation effect="fade" start="100" end="0" time="40" condition="!Control.HasFocus(2)">Conditional</animation>
						</control>
						<control type="label">
							<left>45</left>
							<width>800</width>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<right>45</right>
							<width>440</width>
							<align>right</align>
							<label fallback="20113">$INFO[ListItem.Label2]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="scrollbar" id="60">
				<right>80</right>
				<top>120</top>
				<bottom>120</bottom>
				<onleft>2</onleft>
				<visible>!Container(8000).Hasfocus(1)</visible>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90"</param>
				<param name="opencondition">!Window.Previous(settings)</param>
				<param name="closecondition">!Window.Next(settings)</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$LOCALIZE[13000] / $LOCALIZE[13200]</param>
				<param name="breadcrumbs_icon">settings.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>8000</onright>
				<onback>8000</onback>
				<include>MediaMenu_System</include>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>
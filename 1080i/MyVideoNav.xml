<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<menucontrol>9000</menucontrol>
	<onload condition="System.HasAddon(script.tv.show.next.aired) + !Skin.HasSetting(Disable.NextAired)">RunScript(script.tv.show.next.aired,backend=True)</onload>
	<controls>
		<!-- Backdrop -->
		<include>Background_Nowplaying</include>
		<include content="Background_Fanart_Default">
			<param name="imagepath">$VAR[MovieFanartVar]</param>
		</include>
		<control type="group">
			<include>Animation_VisibleFade</include>
			<include>View_50_List</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(VideoHideTopBar)</visible>
			<include content="Animation_Slide_Top">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$VAR[BreadcrumbsVideoVar]</param>
				<param name="breadcrumbs_icon">video.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9000">
				<usecontrolcoords>true</usecontrolcoords>
				<onleft condition="!Skin.HasSetting(DisableQuickNav)">ActivateWindow(1113)</onleft>
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenu_MyXML_Common</include>
				<!-- Watched Toggle -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="10" />
					<param name="icon" value="icons/mediamenu/watch.png" />
					<param name="label" value="$INFO[Control.GetLabel(10)]$INFO[Container.NumItems,: ]" />
					<param name="visible" value="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.content(seasons) | Container.Content(episodes)" />
				</include>
				<!-- PartyMode -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="16" />
					<param name="icon" value="icons/mediamenu/play.png" />
					<param name="label" value="$LOCALIZE[589]" />
					<param name="visible" value="Container.Content(MusicVideos)" />
				</include>
				<!-- Unlock Shares -->
				<include content="MediaMenu_Icon_RadioButton">
					<param name="id" value="11" />
					<param name="iconon" value="icons/mediamenu/unlock.png" />
					<param name="iconoff" value="icons/mediamenu/lock.png" />
					<param name="label" value="$LOCALIZE[20336]" />
					<param name="selected">System.IsMaster</param>
					<param name="onclick" value="mastermode" />
					<param name="visible">System.HasLocks</param>
				</include>
				<!-- Update Library -->
				<include content="MediaMenu_Icon_ToggleButton">
					<param name="id" value="20" />
					<param name="icon" value="icons/mediamenu/refresh.png" />
					<param name="label" value="$LOCALIZE[653]" />
					<param name="altlabel" value="$LOCALIZE[13353]" />
					<param name="visible">!Container.Content(addons)+ String.IsEmpty(Container.PluginName)</param>
				</include>
				<!-- Go to playlist -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="612" />
					<param name="icon" value="icons/mediamenu/list.png" />
					<param name="label" value="$LOCALIZE[559]" />
					<param name="onclick" value="ActivateWindow(videoplaylist)" />
					<param name="visible">Integer.IsGreater(Playlist.Length(video),0)</param>
				</include>
				<!-- Get more -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="621" />
					<param name="icon" value="icons/mediamenu/add.png" />
					<param name="label" value="$LOCALIZE[21452]" />
					<param name="onclick" value="ActivateWindow(addonbrowser,addons://more/video/,return)" />
					<param name="visible">Container.Content(addons)</param>
				</include>
				<!-- Open Settings -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="624" />
					<param name="icon" value="icons/mediamenu/settings.png" />
					<param name="label" value="$LOCALIZE[10140]" />
					<param name="onclick" value="Addon.OpenSettings($INFO[Container.PluginName])" />
					<param name="visible">!String.IsEmpty(Container.PluginName)</param>
				</include>
				<!-- Quicknav -->
				<include content="MediaMenu_Icon_Button">
					<param name="id" value="9011" />
					<param name="icon" value="icons/mediamenu/arrowleft.png" />
					<param name="label" value="$LOCALIZE[31040]" />
					<param name="onclick" value="ActivateWindow(1113)" />
					<param name="visible" value="!Skin.HasSetting(DisableQuickNav)" />
				</include>
			</control>
		</control>
	</controls>
</window>

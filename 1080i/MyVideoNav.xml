<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<menucontrol>9050</menucontrol>
	<onload condition="System.HasAddon(script.tv.show.next.aired) + !Skin.HasSetting(Disable.NextAired)">RunScript(script.tv.show.next.aired,backend=True)</onload>
	<controls>
		<!-- Backdrop -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[VideoBackgroundVar]</param>
			<param name="backgroundcolor">VidoeBackground.Color.base</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Right</include>
		</control>
		<!-- Views -->
		<control type="group">
			<include>View_50_List</include>
		</control>
		<!-- Media flags -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<animation effect="slide" end="90,11" time="240" tween="cubic" condition="Control.IsVisible(511)">Conditional</animation>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">111</param>
			</include>
			<include>MediaFlags_Right</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(VideoHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$VAR[BreadcrumbsVideoVar]</param>
				<param name="breadcrumbs_icon">$VAR[BreadcrumbsVideoIconVar]</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenu_Common_Top</include>
				<!-- Watched Toggle -->
				<control type="radiobutton" id="10">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/watch.png" />
						<param name="iconoff" value="icons/mediamenu/watch.png" />
					</include>
					<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.content(seasons) | Container.Content(episodes)</visible>
				</control>
				<!-- PartyMode -->
				<control type="radiobutton" id="16">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/play.png" />
						<param name="iconoff" value="icons/mediamenu/play.png" />
					</include>
					<label>$LOCALIZE[589]</label>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<!-- Unlock Shares -->
				<control type="radiobutton" id="11">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/unlock.png" />
						<param name="iconoff" value="icons/mediamenu/lock.png" />
					</include>
					<label>$LOCALIZE[20336]</label>
					<onclick>mastermode</onclick>
					<selected>System.IsMaster</selected>
					<visible>System.HasLocks</visible>
				</control>
				<!-- Update Library -->
				<control type="togglebutton" id="9061">
					<include>MediaMenu_Icon_ToggleButton</include>
					<label>$LOCALIZE[653]</label>
					<onclick>UpdateLibrary(video)</onclick>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningvideo</usealttexture>
				</control>
				<control type="image" id="9062">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture>icons/mediamenu/refresh.png</texture>
					<visible>Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="image" id="9063">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture colordiffuse="grey">icons/mediamenu/refresh.png</texture>
					<visible>!Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="label" id="9064">
					<height>20</height>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<!-- Get more -->
				<control type="radiobutton" id="9065">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/add.png" />
						<param name="iconoff" value="icons/mediamenu/add.png" />
					</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/video/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Add Node -->
				<control type="radiobutton" id="9066">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/add.png" />
						<param name="iconoff" value="icons/mediamenu/add.png" />
					</include>
					<label>$LOCALIZE[31089]</label>
					<onclick condition="System.HasAddon(plugin.library.node.editor)">ActivateWindow(programs,plugin://plugin.library.node.editor/?ltype=video,return)</onclick>
					<onclick condition="!System.HasAddon(plugin.library.node.editor)">InstallAddon(plugin.library.node.editor)</onclick>
					<visible>Container.Content() + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<!-- Open Settings -->
				<control type="radiobutton" id="9067">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/settings.png" />
						<param name="iconoff" value="icons/mediamenu/settings.png" />
					</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>

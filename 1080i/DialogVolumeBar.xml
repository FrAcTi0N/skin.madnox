<?xml version="1.0" encoding="utf-8"?>
<window>
	<controls>
		<control type="group">
			<animation effect="slide" end="0,-40" time="240" tween="cubic" easing="in" condition="Window.IsActive(Visualisation) | Window.IsActive(fullscreenvideo)">Conditional</animation>
			<right>5</right>
			<top>45</top>
			<width>134</width>
			<height>134</height>
			<control type="group">
				<visible>!Window.IsActive(startup) + !Player.Muted</visible>
				<include>Animation_Dialog_Popup_Window</include>
				<include>Animation_Dialog_Popup_Visible</include>
				<control type="progress" id="29999">
					<include>HiddenObject</include>
					<info>Player.Volume</info>
				</control>
				<control type="image">
					<texture colordiffuse="$VAR[PanelColorVar]" border="20">panels/volume-back.png</texture>
				</control>
				<control type="image">
					<left>12</left>
					<top>12</top>
					<width>110</width>
					<height>110</height>
					<texture colordiffuse="$VAR[HighlightColorVar]">$INFO[Control.GetLabel(29999),panels/progress/p,.png]</texture>
				</control>
			</control>
		</control>
	</controls>
</window>
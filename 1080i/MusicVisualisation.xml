<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<backgroundcolor>FF000000</backgroundcolor>
	<controls>
		<include>Animation_WindowFade</include>
		<control type="visualisation">
			<include>FullScreenDimensions</include>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<imagepath background="true" colordiffuse="88FFFFFF">$VAR[NowPlayingFanartVar]</imagepath>
			<randomize>true</randomize>
			<fadetime>TextureFadeTime</fadetime>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<visible>Visualisation.Enabled</visible>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<imagepath background="true">$VAR[NowPlayingFanartVar]</imagepath>
			<randomize>true</randomize>
			<fadetime>TextureFadeTime</fadetime>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<visible>!Visualisation.Enabled</visible>
		</control>
		<control type="image">
			<top>480</top>
			<width>1920</width>
			<height>600</height>
			<texture colordiffuse="FF000000">panels/floor-gradient.png</texture>
		</control>
		<control type="group">
			<top>640</top>
			<left>440</left>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">440</param>
			</include>
			<animation effect="slide" end="110,0" delay="200" time="200" condition="!Skin.HasSetting(DisableMusicOSDDiscArt) + !Pvr.IsPlayingRadio + !Player.IsInternetStream + !Player.Paused">Conditional</animation>
			<control type="label" id="9052">
				<top>17</top>
				<height>50</height>
				<textoffsetx>40</textoffsetx>
				<label>$VAR[NowPlayingInfo1Var]</label>
				<font>Font40_Reg</font>
			</control>
			<control type="image">
				<top>66</top>
				<height>4</height>
				<width>388</width>
				<texture>panels/separator.png</texture>
				<visible>!String.IsEmpty(Control.GetLabel(9052)) | !String.IsEmpty(Control.GetLabel(9052))</visible>
			</control>
			<control type="label" id="9053">
				<top>60</top>
				<height>50</height>
				<textcolor>grey</textcolor>
				<textoffsetx>40</textoffsetx>
				<label>$VAR[NowPlayingInfo2Var]</label>
				<font>Font34_Reg</font>
			</control>
			<control type="image">
				<!-- <visible>$PARAM[logo]</visible> -->
				<include>Animation_VisibleFade</include>
				<top>100</top>
				<width>550</width>
				<height>200</height>
				<texture>$VAR[NowPlayingLogoVar]</texture>
				<aspectratio align="right">keep</aspectratio>
			</control>
			<control type="label">
				<top>286</top>
				<height>50</height>
				<textcolor>grey</textcolor>
				<textoffsetx>40</textoffsetx>
				<label>$VAR[NowPlayingStatusVar]</label>
				<font>Font34_Reg</font>
				<visible></visible>
			</control>
			<control type="image">
				<top>340</top>
				<height>36</height>
				<width>18</width>
				<texture>panels/nowplaying.png</texture>
			</control>
			<control type="label">
				<top>328</top>
				<height>50</height>
				<textoffsetx>40</textoffsetx>
				<label>$INFO[MusicPlayer.TrackNumber,,. ]$INFO[Player.Title,, ]$INFO[VideoPlayer.Year,(,)]</label>
				<font>Font40_Reg</font>
			</control>
		</control>
		<control type="group">
			<top>640</top>
			<left>40</left>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">440</param>
			</include>
			<control type="image">
				<top>20</top>
				<width>361</width>
				<height>361</height>
				<include>TextureFadeTime</include>
				<animation effect="slide" end="210,0" delay="200" time="200" condition="!Player.Paused + !Skin.HasSetting(DisableMusicOSDDiscArt)">Conditional</animation>
				<animation effect="rotate" end="-360" center="auto" time="4800" loop="true" reversible="false" condition="!Player.Paused + !Player.Forwarding + !Player.Rewinding">Conditional</animation>
				<animation effect="rotate" end="-360" center="auto" time="400" loop="true" reversible="false" condition="Player.Forwarding">Conditional</animation>
				<animation effect="rotate" end="360" center="auto" time="400" loop="true" reversible="false" condition="Player.Rewinding">Conditional</animation>
				<texture diffuse="thumbs/disc-diffuse.png" fallback="thumbs/disc/default.png">$VAR[NowPlayingDiscArtVar]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<visible>!Skin.HasSetting(DisableMusicOSDDiscArt) + !Pvr.IsPlayingRadio + !Player.IsInternetStream</visible>
			</control>
			<control type="image">
				<left>-20</left>
				<top>-20</top>
				<description>Back image</description>
				<width>440</width>
				<height>440</height>
				<texture border="20">thumbs/thumb-frame.png</texture>
			</control>
			<control type="image">
				<description>Cover image</description>
				<width>400</width>
				<height>400</height>
				<include>TextureFadeTime</include>
				<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
				<texture fallback="DefaultAlbumCover.png">$VAR[NowPlayingThumbVar]</texture>
			</control>
		</control>
	</controls>
</window>

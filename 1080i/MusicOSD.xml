<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="MusicPlayer.Content(LiveTV) + !Player.PauseEnabled">SetFocus(201)</onload>
	<defaultcontrol always="true">206</defaultcontrol>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(dialogsettings.xml) + !Window.IsActive(dialogselect.xml) + !Window.IsActive(subtitlesearch) + !Window.IsActive(pvrosdChannels) + !Window.IsActive(pvrchannelguide) + !Window.IsActive(1117)</visible>
			<include content="Animation_Slide_Bottom">
				<param name="slide">160</param>
			</include>
			<top>950</top>
			<control type="image">
				<top>-20</top>
				<width>1920</width>
				<height>20</height>
				<texture colordiffuse="$VAR[GlowColorVar]">dialogs/glow-bottom.png</texture>
			</control>
			<control type="image">
				<width>1920</width>
				<height>130</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="15">dialogs/osd-back.png</texture>
			</control>
			<control type="grouplist">
				<left>5</left>
				<bottom>-5</bottom>
				<height>120</height>
				<onleft>308</onleft>
				<onright>201</onright>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<control type="radiobutton" id="101">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/settings.png"/>
					</include>
					<onclick>ActivateWindow(1117)</onclick>
				</control>
				<control type="radiobutton" id="102">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/rating.png"/>
					</include>
					<onclick>SetRating</onclick>
				</control>
				<control type="radiobutton" id="103">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/list.png"/>
					</include>
					<onclick>Close</onclick>
					<onclick>ActivateWindow(MusicPlaylist)</onclick>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
			</control>
			<control type="grouplist">
				<bottom>-5</bottom>
				<height>120</height>
				<onright>301</onright>
				<onleft>103</onleft>
				<align>center</align>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="radiobutton" id="201">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/up.png"/>
					</include>
					<onclick>PlayerControl(Previous)</onclick>
					<visible>MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="202">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/down.png"/>
					</include>
					<onclick>PlayerControl(Next)</onclick>
					<visible>MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="203">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/previous.png"/>
					</include>
					<onclick>PlayerControl(Previous)</onclick>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="204">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/rw.png"/>
					</include>
					<onclick>PlayerControl(Rewind)</onclick>
					<visible>Player.SeekEnabled</visible>
				</control>
				<control type="radiobutton" id="205">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/stop.png"/>
					</include>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<control type="radiobutton" id="206">
					<include>Dialog_Button_OSD</include>
					<onclick>PlayerControl(Play)</onclick>
					<visible>Player.PauseEnabled</visible>
				</control>
				<control type="image" id="207">
					<left>-110</left>
					<width>120</width>
					<height>120</height>
					<texture>$VAR[OSDPlayButtonVar]</texture>
					<visible>Player.PauseEnabled</visible>
				</control>
				<control type="radiobutton" id="208">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/ff.png"/>
					</include>
					<onclick>PlayerControl(Forward)</onclick>
					<visible>Player.SeekEnabled</visible>
				</control>
				<control type="radiobutton" id="209">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/next.png"/>
					</include>
					<onclick>PlayerControl(Next) + MusicPlayer.HasNext</onclick>
					<visible>!VideoPlayer.Content(livetv)</visible>
				</control>
				<control type="radiobutton" id="210">
					<include>Dialog_Button_OSD</include>
					<onclick>PlayerControl(Record)</onclick>
					<visible>Player.CanRecord</visible>
				</control>
				<control type="image" id="211">
					<left>-110</left>
					<width>120</width>
					<height>120</height>
					<texture>$VAR[OSDRecordButtonVar]</texture>
					<visible>Player.CanRecord</visible>
				</control>
			</control>
			<control type="grouplist">
				<right>5</right>
				<bottom>-5</bottom>
				<height>120</height>
				<onleft>211</onleft>
				<onright>101</onright>
				<align>right</align>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="radiobutton" id="301">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/info.png"/>
					</include>
					<onclick>Info</onclick>
				</control>
				<control type="radiobutton" id="302">
					<include>Dialog_Button_OSD</include>
					<onclick>PlayerControl(Repeat)</onclick>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="image" id="303">
					<left>-110</left>
					<width>120</width>
					<height>120</height>
					<texture>$VAR[OSDRepeatButtonVar]</texture>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="304">
					<include>Dialog_Button_OSD</include>
					<onclick>PlayerControl(Random)</onclick>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="image" id="305">
					<left>-110</left>
					<width>120</width>
					<height>120</height>
					<texture>$VAR[OSDRandomButtonVar]</texture>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="306">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/lyrics.png"/>
					</include>
					<onclick>Info</onclick>
					<onclick>Close</onclick>
					<onclick condition="!String.IsEmpty(Skin.String(LyricScript_Path))">RunScript($INFO[Skin.String(LyricScript_Path)])</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">Skin.SetAddon(LyricScript_Path,xbmc.python.lyrics)</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">Close</onclick>
					<onclick condition="String.IsEmpty(Skin.String(LyricScript_Path))">RunScript($INFO[Skin.String(LyricScript_Path)])</onclick>
					<onclick>Close</onclick>
					<visible>!MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="307">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/channels.png"/>
					</include>
					<onclick>ActivateWindow(pvrosdChannels)</onclick>
					<visible>VideoPlayer.HasEpg</visible>
					<visible>MusicPlayer.Content(LiveTV)</visible>
				</control>
				<control type="radiobutton" id="308">
					<include content="Dialog_Button_OSD">
						<param name="texture" value="buttons/player/guide.png"/>
					</include>
					<onclick>ActivateWindow(pvrchannelguide)</onclick>
					<visible>VideoPlayer.HasEpg</visible>
					<visible>MusicPlayer.Content(LiveTV)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
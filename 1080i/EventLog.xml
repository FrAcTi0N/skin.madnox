<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">7000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>7000</views>
	<controls>
		<!-- Background -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[SystemBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Default</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<include content="Panel_Default">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<control type="list" id="7000">
				<left>100</left>
				<top>145</top>
				<width>1720</width>
				<height>791</height>
				<onleft>9050</onleft>
				<onright>60</onright>
				<viewtype label="">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="113">
					<control type="image">
						<texture border="30">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="image">
						<left>35</left>
						<top>15</top>
						<width>84</width>
						<height>84</height>
						<aspectratio>scale</aspectratio>
						<texture fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>134</left>
						<right>455</right>
						<top>15</top>
						<height>42</height>
						<font>Font32_Reg</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>134</left>
						<top>57</top>
						<right>35</right>
						<height>42</height>
						<font>Font29_Cond</font>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Property(Event.Description)]</label>
					</control>
					<control type="label">
						<right>35</right>
						<top>15</top>
						<width>400</width>
						<height>42</height>
						<align>right</align>
						<font>Font32_Reg</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="113">
					<control type="image">
						<texture colordiffuse="$VAR[HighlightColorVar]">buttons/list-select-focus.png</texture>
						<visible>Control.HasFocus(7000)</visible>
					</control>
					<control type="image">
						<texture border="30">buttons/list-select-nofocus.png</texture>
						<visible>!Control.HasFocus(7000)</visible>
					</control>
					<control type="image">
						<left>35</left>
						<top>15</top>
						<width>84</width>
						<height>84</height>
						<aspectratio>scale</aspectratio>
						<texture fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>134</left>
						<right>455</right>
						<top>15</top>
						<height>42</height>
						<font>Font32_Reg</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>134</left>
						<top>57</top>
						<right>35</right>
						<height>42</height>
						<font>Font29_Cond</font>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Property(Event.Description)]</label>
					</control>
					<control type="label">
						<right>35</right>
						<top>15</top>
						<width>400</width>
						<height>42</height>
						<align>right</align>
						<font>Font32_Reg</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<right>80</right>
				<top>120</top>
				<bottom>120</bottom>
				<onleft>7000</onleft>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$LOCALIZE[13000] / $LOCALIZE[14111]</param>
				<param name="breadcrumbs_icon">info.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>7000</onright>
				<onback>7000</onback>
				<include>MediaMenu_System</include>
				<control type="radiobutton" id="4">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/ascending.png" />
						<param name="iconoff" value="icons/mediamenu/descending.png" />
					</include>
					<label>$INFO[Container.SortOrder]</label>
				</control>
				<control type="radiobutton" id="21">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/level.png" />
						<param name="iconoff" value="icons/mediamenu/level.png" />
					</include>
				</control>
				<control type="radiobutton" id="22">
					<include>MediaMenu_Icon_Button</include>
					<visible>Control.IsEnabled(22)</visible>
				</control>
				<control type="radiobutton" id="20">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/clear.png" />
						<param name="iconoff" value="icons/mediamenu/clear.png" />
					</include>
					<label>$LOCALIZE[192]</label>
					<visible>Control.IsEnabled(20)</visible>
				</control>
				<control type="radiobutton" id="501">
					<include content="MediaMenu_Icon_Button">
						<param name="iconon" value="icons/mediamenu/settings.png" />
						<param name="iconoff" value="icons/mediamenu/settings.png" />
					</include>
					<label>$LOCALIZE[5]</label>
					<onclick>ActivateWindow(systemsettings,logging)</onclick>
				</control>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>
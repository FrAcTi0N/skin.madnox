<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">8000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Background -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[SystemBackgroundVar]</param>
			<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
			<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			<param name="backgroundcolor">SystemBackground.Color.base</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">220</param>
			</include>
			<include>Floor_Default</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<include content="Panel_Default">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>Animation_Zoom_Window</include>
			<control type="panel" id="8000">
				<left>171</left>
				<top>130</top>
				<width>1608</width>
				<height>820</height>
				<onleft>9050</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<itemlayout height="267" width="402">
					<control type="image">
						<top>24</top>
						<width>372</width>
						<height>237</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture border="10" diffuse="thumbs/landscape-mask.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="10" colordiffuse="55FFFFFF">buttons/panel-select-focus.png</bordertexture>
						<bordersize>4</bordersize>
					</control>
					<control type="label">
						<top>211</top>
						<width>372</width>
						<height>40</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Font32_Reg</font>
						<align>center</align>
						<textcolor>grey</textcolor>
					</control>
				</itemlayout>
				<focusedlayout height="267" width="402">
					<control type="group">
						<animation effect="zoom" center="auto" start="100" end="107" time="250" tween="sine">Focus</animation>
						<control type="image">
							<top>24</top>
							<width>372</width>
							<height>237</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture colordiffuse="$VAR[HighlightColorVar]" diffuse="thumbs/landscape-mask.png">$INFO[ListItem.Icon]</texture>
							<bordertexture border="10" colordiffuse="55FFFFFF">buttons/panel-select-focus.png</bordertexture>
							<bordersize>4</bordersize>
						</control>
						<control type="label">
							<top>211</top>
							<width>372</width>
							<height>40</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Font32_Reg</font>
							<align>center</align>
						</control>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[14207]</label>
						<onclick>ActivateWindow(InterfaceSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/interface.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[20077]</label>
						<onclick>ActivateWindow(SkinSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/skinsettings.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14201]</label>
						<onclick>ActivateWindow(PlayerSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/player.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14212]</label>
						<onclick>ActivateWindow(MediaSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/media.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[24001]</label>
						<onclick>ActivateWindow(1114)</onclick>
						<icon>special://skin/extras/backgrounds/system/addons.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14208]</label>
						<onclick>ActivateWindow(ServiceSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/network.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14209]</label>
						<onclick>ActivateWindow(SystemSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/system.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14205]</label>
						<onclick>ActivateWindow(PVRSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/livetv.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[15016]</label>
						<onclick>ActivateWindow(GameSettings)</onclick>
						<icon>special://skin/extras/backgrounds/system/games.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14210]</label>
						<onclick>ActivateWindow(Profiles)</onclick>
						<icon>special://skin/extras/backgrounds/system/profiles.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[10003]</label>
						<onclick>ActivateWindow(filemanager)</onclick>
						<icon>special://skin/extras/backgrounds/system/filemanager.jpg</icon>
					</item>
					<item>
						<label>LibreELEC</label>
						<onclick>RunAddon(service.libreelec.settings)</onclick>
						<icon>special://skin/extras/backgrounds/system/libreelec.jpg</icon>
						<visible>System.HasAddon(service.libreelec.settings)</visible>
					</item>
					<item>
						<label>$LOCALIZE[138]</label>
						<onclick>ActivateWindow(systeminfo)</onclick>
						<icon>special://skin/extras/backgrounds/system/sysinfo.jpg</icon>
					</item>
					<item>
						<label>$LOCALIZE[14114]</label>
						<onclick>ActivateWindow(eventlog)</onclick>
						<icon>special://skin/extras/backgrounds/system/eventlog.jpg</icon>
					</item>
				</content>
			</control>
			<control type="scrollbar" id="60">
				<right>121</right>
				<top>140</top>
				<bottom>140</bottom>
				<onleft>8000</onleft>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[System_Animation_OpenCondition]</param>
				<param name="closecondition">$EXP[System_Animation_CloseCondition]</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$LOCALIZE[13000]</param>
				<param name="breadcrumbs_icon">settings.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>8000</onright>
				<onback>8000</onback>
				<include>MediaMenu_System</include>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>

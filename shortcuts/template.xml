<?xml version="1.0" encoding="UTF-8"?>
<template>
	<other include="widget1">
		<!-- Widget style condition-->
		<condition tag="property" attribute="name|widgetStyle">panel</condition>
		<propertyGroup>widgetCommon</propertyGroup>
		<!-- Container size -->
		<property name="containerwidth" tag="property" attribute="name|widgetAspect" value="portrait">265.71</property>
		<property name="containerheight" tag="property" attribute="name|widgetAspect" value="portrait">388</property>
		<property name="containerwidth" tag="property" attribute="name|widgetAspect" value="square">372</property>
		<property name="containerheight" tag="property" attribute="name|widgetAspect" value="square">372</property>
		<property name="containerwidth" tag="property" attribute="name|widgetAspect" value="landscape">620</property>
		<property name="containerheight" tag="property" attribute="name|widgetAspect" value="landscape">357</property>
		<!-- Artwork border -->
		<property name="border" tag="property">10</property>
		<controls>
			<control type="group">
				<skinshortcuts>visibility</skinshortcuts>
				<include>AnimationVisibleFade</include>
				<include content="WidgetInfo">
					<param name="left">$SKINSHORTCUTS[infoleft]</param>
					<param name="width">$SKINSHORTCUTS[infowidth]</param>
					<param name="aspect">$SKINSHORTCUTS[infoaspect]</param>
				</include>
				<control type="panel" id="8011$SKINSHORTCUTS[id]">
					<visible>String.IsEmpty(Skin.String(HomeWidget$SKINSHORTCUTS[id]))</visible>
					<top>30</top>
					<animation effect="slide" end="0,$PYTHON[(388 - int(containerheight))]" condition="!String.IsEqual(Skin.String(WidgetPosition),top)">Conditional</animation>
					<onup>9050</onup>
					<ondown>9000</ondown>
					<left>30</left>
					<right>30</right>
					<height>$SKINSHORTCUTS[containerheight]</height>
					<orientation>horizontal</orientation>
					<preloaditems>2</preloaditems>
					<include content="WidgetContainer">
						<param name="containerwidth">$SKINSHORTCUTS[containerwidth]</param>
						<param name="containerheight">$SKINSHORTCUTS[containerheight]</param>
						<param name="artwork">$SKINSHORTCUTS[artwork]</param>
						<param name="aspect">$SKINSHORTCUTS[aspect]</param>
						<param name="border">$SKINSHORTCUTS[border]</param>
						<param name="artworkaspect">$SKINSHORTCUTS[artworkaspect]</param>
						<param name="labelvisible">$SKINSHORTCUTS[labelvisible]</param>
					</include>
					<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[path]</content>
				</control>
			</control>
		</controls>
	</other>
	<!-- Property groups -->
	<propertyGroup name="widgetCommon">
		<!-- Retrieve properties -->
		<property name="id" tag="mainmenuid" />
		<property name="path" tag="property" attribute="name|widgetPath" />
		<property name="target" tag="property" attribute="name|widgetTarget" />
		<property name="name" tag="property" attribute="name|widgetName" />
		<!-- Artwork -->
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="poster">$VAR[PosterVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="fanart">$VAR[FanArtVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="landscape">$VAR[LandscapeVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="clearart">$VAR[ClearArtVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="clearlogo">$VAR[ClearLogoVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="thumb">$VAR[ThumbVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="discart">$VAR[DiscArtVar]</property>
		<property name="artwork" tag="property" attribute="name|widgetArtwork" value="characterart">$VAR[CharacterArtVar]</property>
		<!-- Artwork aspect -->
		<property name="artworkaspect" tag="property" attribute="name|widgetType" value="pvr">keep</property>
		<property name="artworkaspect" tag="property" attribute="name|widgetArtwork" value="clearart|clearLogo|discart|characterart">keep</property>
		<property name="artworkaspect">scale</property>
		<!-- Label -->
		<property name="labelvisible" tag="property" attribute="name|widgetLabel" value="true">true</property>
		<property name="labelvisible">false</property>
		<!-- Info dimensions -->
		<property name="infoleft" tag="property" attribute="name|widgetType" value="movies|episodes|tvshows">245</property>
		<property name="infoleft">347</property>
		<property name="infowidth" tag="property" attribute="name|widgetType" value="movies|episodes|tvshows">225</property>
		<property name="infowidth">327</property>
		<property name="infoaspect" tag="property" attribute="name|widgetType" value="pvr">keep</property>
		<property name="infoaspect">scale</property>
	</propertyGroup>
</template>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<onload condition="!System.HasAddon(script.skinshortcuts)">InstallAddon(script.skinshortcuts)</onload>
	<onload condition="!System.HasAddon(script.embuary.helper)">InstallAddon(script.embuary.helper)</onload>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=2&amp;group=mainmenu|quicknav)</onload>
	<!-- <include>skinshortcuts-template-widgetOnloadFocus</include> -->
	<!-- <onload>SetProperty(WidgetFocus4,2,home)</onload> -->
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[HomeFanartVar]</param>
		</include>
		<control type="group">
			<visible>!Window.IsActive(movieinformation) + !Window.IsActive(musicinformation) + !Window.IsActive(songinformation) + !Window.IsActive(addoninformation)</visible>
			<include>AnimationVisibleFade</include>
			<!-- Now playing -->
			<control type="group">
				<visible>[Player.HasAudio + !Skin.HasSetting(NowplayingHomeDisableAudio)] | [Player.HasVideo + !Skin.HasSetting(NowplayingHomeDisableVideo)]</visible>
				<include>AnimationVisibleFade</include>
				<include content="AnimationSlideTopWindow">
					<param name="opencondition">Skin.HasSetting(WidgetHigh)</param>
					<param name="closecondition">Skin.HasSetting(WidgetHigh)</param>
				</include>
				<include content="AnimationSlideBottomWindow">
					<param name="opencondition">!Skin.HasSetting(WidgetHigh)</param>
					<param name="closecondition">!Skin.HasSetting(WidgetHigh)</param>
				</include>
				<include>HomeNowPlaying</include>
			</control>
			<!-- Widgets -->
			<control type="group" id="90010">
				<include content="AnimationSlideTopWindow">
					<param name="opencondition">Skin.HasSetting(WidgetHigh)</param>
					<param name="closecondition">Skin.HasSetting(WidgetHigh)</param>
				</include>
				<include content="AnimationSlideBottomWindow">
					<param name="opencondition">!Skin.HasSetting(WidgetHigh)</param>
					<param name="closecondition">!Skin.HasSetting(WidgetHigh)</param>
				</include>
				<animation effect="fade" start="100" end="0" time="200" condition="[!Skin.HasSetting(NowplayingHomeDisableAudio) + Player.HasAudio + !ControlGroup(90010).HasFocus] | [Player.HasVideo + !Skin.HasSetting(NowplayingHomeDisableVideo) + !ControlGroup(90010).HasFocus] | [Skin.HasSetting(WidgetHide) + !ControlGroup(90010).HasFocus]">Conditional</animation>
				<!-- The visibility condition causes a quick flash of the widgets between menu items but is required for navigation -->
				<!-- <visible>!String.IsEmpty(Container(9000).ListItem.Property(widgetPath.1))</visible> -->
				
				<include>skinshortcuts-template-widget1</include>
				<include>skinshortcuts-template-widget2</include>
				<include>skinshortcuts-template-widget3</include>
				<include>skinshortcuts-template-widget4</include>
				<include>skinshortcuts-template-widget5</include>
				<include>skinshortcuts-template-widget6</include>
			</control>
			<!-- System/RSS/Time bar and Shortcuts -->
			<include>InfoTimeBar</include>
			<!-- Menu -->
			<include condition="!Skin.HasSetting(MainMenuFixedList)">MainMenu</include>
			<include condition="Skin.HasSetting(MainMenuFixedList)" content="MainMenu">
				<param name="listtype">fixedlist</param>
			</include>

			<include>RSSShortcuts</include>
		</control>




		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<visible>!String.IsEqual(Skin.String(KioskMode),HideOptions) + !String.IsEqual(Skin.String(KioskMode),HideMenu)</visible>
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<usecontrolcoords>true</usecontrolcoords>
				<onright>9000</onright>
				<onback>9000</onback>
				<!-- Menu -->
				<control type="radiobutton" id="9051">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/menu.png" />
						<param name="iconoff" value="icons/mediamenu/menu.png" />
					</include>
					<label>$LOCALIZE[31017]</label>
					<onclick>RunScript(script.skinshortcuts,type=manage&amp;group=mainmenu)</onclick>
				</control>
				<control type="radiobutton" id="9052">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/settings.png" />
						<param name="iconoff" value="icons/mediamenu/settings.png" />
					</include>
					<label>$LOCALIZE[31286]</label>
					<onclick>SetProperty(MediaMenuSelect,menu,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9053">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/info.png" />
						<param name="iconoff" value="icons/mediamenu/info.png" />
					</include>
					<label>$LOCALIZE[29915]</label>
					<onclick>SetProperty(MediaMenuSelect,info,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9055">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/play.png" />
						<param name="iconoff" value="icons/mediamenu/play.png" />
					</include>
					<label>$LOCALIZE[31002]</label>
					<onclick>SetProperty(MediaMenuSelect,nowplaying,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<control type="radiobutton" id="9056">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/colors.png" />
						<param name="iconoff" value="icons/mediamenu/colors.png" />
					</include>
					<label>$LOCALIZE[31285]</label>
					<onclick>SetProperty(MediaMenuSelect,colors,home)</onclick>
					<onclick>ActivateWindow(1115)</onclick>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
				<include condition="$EXP[AreaVisibleHome] + String.IsEqual(Window(home).Property(MediaMenuSelect),info)">MediaMenuViewsettingsInfoHome</include>
				<include condition="$EXP[AreaVisibleHome] + String.IsEqual(Window(home).Property(MediaMenuSelect),widgets)">MediaMenuViewsettingsWidgetsHome</include>
				<include condition="$EXP[AreaVisibleHome] + String.IsEqual(Window(home).Property(MediaMenuSelect),nowplaying)">MediaMenuViewsettingsNowPlayingHome</include>

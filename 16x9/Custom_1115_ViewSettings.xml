				<param name="left">470</param>
			</include>
			<control type="grouplist" id="100">
				<width>470</width>
				<height>1020</height>
				<onleft>9001</onleft>
				<pagecontrol>60</pagecontrol>
				<onright>Dialog.Close(1115)</onright>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,51,501,505,507,509,521,531,541</views>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Background -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[GamesBackgroundVar]</param>
		</include>
		<!-- Views -->
		<control type="group">
			<visible>!Window.IsActive(addoninformation)</visible>
			<include>AnimationInfoDialog</include>
			<!-- List -->
			<include>View50CoverList</include>
			<include>View51SimpleList</include>
			<!-- Cover flow -->
			<include condition="!Skin.HasSetting(DisableViewSquare)">View501Square</include>
			<include condition="!Skin.HasSetting(DisableViewFocusSquare)">View505FocusSquare</include>
			<include condition="!Skin.HasSetting(DisableViewCascadeSquare)">View507CascadeSquare</include>
			<include condition="!Skin.HasSetting(DisableViewShowCaseSquare)">View509ShowcaseSquare</include>
			<!-- Icon -->
			<include condition="!Skin.HasSetting(DisableViewSquareIcon)">View521SquareIcon</include>
			<!-- Icon info-->
			<include condition="!Skin.HasSetting(DisableViewSquareIconInfo)">View531SquareIconInfo</include>
			<!-- Wall -->
			<include condition="!Skin.HasSetting(DisableViewSquareWall)">View541SquareWall</include>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(ViewsHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$LOCALIZE[15016]</param>
				<param name="icon">games.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuCommonTop</include>
				<!-- Get more -->
				<control type="radiobutton" id="9061">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/add.png</param>
						<param name="iconoff">icons/mediamenu/add.png</param>
					</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/game/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Open Settings -->
				<control type="radiobutton" id="9062">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/settings.png</param>
						<param name="iconoff">icons/mediamenu/settings.png</param>
					</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>

<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,51,52,53,54,55,57,500,501,502,503,504,505,507,512,513,514,515,516,517</views>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[MusicBackgroundVar]</param>
		</include>
		<control type="group">
			<visible>!Window.IsActive(musicinformation) + !Window.IsActive(songinformation)</visible>
			<include>AnimationVisibleFade</include>
			<!-- Floor -->
			<include>ViewsFloor</include>
			<!-- Views -->
			<control type="group">
				<visible>!Window.IsActive(addoninformation)</visible>
				<include>AnimationInfoDialog</include>
				<include>View50PosterList</include>
				<include>View51SimpleList</include>
				<include>View52TwinList</include>
				<include>View53InfoList1</include>
				<include>View54InfoList2</include>
				<include>View55LowList</include>
				<include>View573PanelSquare</include>
				<include>View500BigPosterList</include>
				<include>View501BigSimpleList</include>
				<include>View502BigTwinList</include>
				<include>View503BigInfoList1</include>
				<include>View504BigInfoList2</include>
				<include>View505BigLowList</include>
				<include>View507Big3PanelSquare</include>
				<include>View512PosterWallSquare</include>
				<include>View513LandscapeWall</include>
				<include>View514BannerWall</include>
				<include>View515PosterFullscreenWall</include>
				<include>View516LandscapeFullscreenWall</include>
				<include>View517BannerFullscreenWall</include>
			</control>
			<!-- Bottom info -->
			<include>ViewsBottomInfo</include>
			<!-- Media flags -->
			<include>ViewsMediaFlagsAudio</include>
			<!-- Hidden - Album/Song count -->
			<control type="list" id="811111">
				<include>HiddenList</include>
				<content>$INFO[ListItem.FolderPath]</content>
			</control>
			<!-- Topbar -->
			<control type="group">
				<visible>!Skin.HasSetting(ViewsHideTopBar)</visible>
				<include content="AnimationSlideTopWindow">
					<param name="slide">90</param>
				</include>
				<include content="AnimationSlideTopVisible">
					<param name="slide">90</param>
				</include>
				<include content="TopBar">
					<param name="label">$LOCALIZE[2]</param>
					<param name="icon">music.png</param>
				</include>
			</control>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuCommonTop</include>
				<!-- PartyMode -->
				<control type="radiobutton" id="16">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/play.png</param>
						<param name="iconoff">icons/mediamenu/play.png</param>
					</include>
					<label>$LOCALIZE[589]</label>
				</control>
				<!-- Update Library -->
				<control type="togglebutton" id="9061">
					<include>MediaMenuIconToggleButton</include>
					<label>$LOCALIZE[653]</label>
					<onclick>UpdateLibrary(music)</onclick>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningmusic</usealttexture>
				</control>
				<control type="image" id="9062">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture colordiffuse="$VAR[MediaMenuFocusIconColorVar]">icons/mediamenu/refresh.png</texture>
					<visible>Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="image" id="9063">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture colordiffuse="$VAR[MediaMenuIconColorVar]">icons/mediamenu/refresh.png</texture>
					<visible>!Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="label" id="9064">
					<height>20</height>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<!-- Get more -->
				<control type="radiobutton" id="9065">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/add.png</param>
						<param name="iconoff">icons/mediamenu/add.png</param>
					</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/audio/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Open Settings -->
				<control type="radiobutton" id="9066">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/settings.png</param>
						<param name="iconoff">icons/mediamenu/settings.png</param>
					</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
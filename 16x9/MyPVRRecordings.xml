<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>50</views>
	<controls>
		<!-- Backdrop -->
		<include content="Background_Default">
			<param name="imagepath">$VAR[PVRBackgroundVar]</param>
			<param name="backgroundcolor">PVRBackground.Color.base</param>
		</include>
		<control type="group">
			<description>Recordings</description>
			<visible>Control.IsVisible(50)</visible>
			<top>30</top>
			<width>1830</width>
			<height>1068</height>
			<include>Animation_OpenCloseZoom_New</include>
			<control type="group">
				<include>Animation_VisibleChange200</include>
				<control type="image">
					<left>45</left>
					<top>38</top>
					<width>1830</width>
					<height>1068</height>
					<texture colordiffuse="$VAR[AreaColorVar]">wall/wall_bg_glow.png</texture>
					<visible>!Skin.HasSetting(DisableGlowbar)</visible>
					<include>PanelGlowFade</include>
				</control>
				<control type="image">
					<left>45</left>
					<top>38</top>
					<width>1830</width>
					<height>1068</height>
					<texture colordiffuse="$VAR[DialogColorVar]">wall/wall_bg.png</texture>
				</control>
				<control type="image">
					<left>45</left>
					<top>38</top>
					<width>1830</width>
					<height>1068</height>
					<texture>wall/wall_bg_reflection.png</texture>
				</control>
				<control type="group">
					<control type="image">
						<left>57</left>
						<top>95</top>
						<width>880</width>
						<height>830</height>
						<texture colordiffuse="$VAR[AreaColorVar]">views/listpanel_detailwide.png</texture>
					</control>
					<control type="image">
						<left>938</left>
						<top>95</top>
						<width>2</width>
						<height>830</height>
						<texture colordiffuse="$VAR[AreaColorVar]">views/tripanel/upright.png</texture>
						<animation effect="fade" end="50" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
			<control type="group">
				<visible>Control.IsVisible(50)</visible>
				<include>Animation_VisibleChange200</include>
				<control type="group">
					<left>105</left>
					<top>480</top>
					<include>Animation_OpenCloseZoom_New</include>
					<include>Animation_VisibleChange200</include>
					<visible>!String.IsEmpty(Container(50).ListItem.Title)</visible>
					<control type="image">
						<width>804</width>
						<height>80</height>
						<texture>common/black.png</texture>
						<animation effect="fade" end="60" condition="true">conditional</animation>
					</control>
					<control type="label">
						<left>20</left>
						<top>5</top>
						<width>764</width>
						<height>30</height>
						<align>center</align>
						<label>$INFO[Container(50).ListItem.Title]</label>
						<font>Font_Bold34</font>
						<textcolor>$VAR[FontColorVar]</textcolor>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<left>10</left>
						<top>43</top>
						<width>800</width>
						<height>30</height>
						<align>center</align>
						<label>$INFO[Container(50).ListItem.StartDate] - $INFO[Container(50).ListItem.StartTime]</label>
						<font>Font_Reg25</font>
						<textcolor>white</textcolor>
						<visible>Container(50).ListItem.HasEpg</visible>
					</control>
				</control>
				<control type="group">
					<left>100</left>
					<top>565</top>
					<include>Animation_OpenCloseZoom_New</include>
					<include>Animation_VisibleChange200</include>
					<control type="textbox">
						<top>10</top>
						<width>800</width>
						<height>330</height>
						<label>$INFO[Container(50).ListItem.Plot]</label>
						<font>Font_Reg30_2</font>
						<shadowcolor>black</shadowcolor>
						
						<autoscroll time="5000" delay="2000" repeat="5000">true</autoscroll>
					</control>
				</control>
				<control type="list" id="50">
					<left>940</left>
					<top>96</top>
					<width>930</width>
					<height>810</height>
					<pagecontrol>72</pagecontrol>
					<scrolltime>200</scrolltime>
					<onleft>9000</onleft>
					<onright>72</onright>
					<onup>50</onup>
					<ondown>50</ondown>
					<itemlayout height="55" width="924">
						<control type="image">
							<top>24</top>
							<width>924</width>
							<height>40</height>
							<texture colordiffuse="$VAR[AreaColorVar]" border="1">osd/osd_settings_buttonnf.png</texture>
						</control>
						<control type="image">
							<left>2</left>
							<top>5</top>
							<width>60</width>
							<height>60</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
							<bordersize>8</bordersize>
						</control>
						<control type="label">
							<left>65</left>
							<top>12</top>
							<width>550</width>
							<height>40</height>
							<label>[B][COLOR white]$INFO[ListItem.Label][/COLOR][/B]$INFO[ListItem.Title, - ]</label>
							<font>Font_Reg32</font>
							<textcolor>$VAR[FontColorVar]</textcolor>
						</control>
						<control type="label">
							<left>630</left>
							<top>14</top>
							<width>300</width>
							<height>40</height>
							<label>$INFO[ListItem.StartDate] - $INFO[ListItem.StartTime]</label>
							<font>Font_Reg22</font>
							<textcolor>grey</textcolor>
							<visible>!String.IsEmpty(ListItem.StartDate) + !String.IsEmpty(ListItem.StartTime)</visible>
						</control>
					</itemlayout>
					<focusedlayout height="55" width="924">
						<control type="image">
							<top>24</top>
							<width>924</width>
							<height>40</height>
							<texture colordiffuse="$VAR[AreaColorVar]" border="1">osd/osd_settings_buttonnf.png</texture>
						</control>
						<control type="image">
							<top>9</top>
							<width>923</width>
							<height>54</height>
							<texture colordiffuse="$VAR[FocusTextureColorVar]">views/tripanel/listselect_fo.png</texture>
						</control>
						<control type="image">
							<left>2</left>
							<top>5</top>
							<width>60</width>
							<height>60</height>
							<aspectratio>keep</aspectratio>
							<texture fallback="DefaultVideo.png">$INFO[ListItem.Icon]</texture>
							<bordersize>8</bordersize>
						</control>
						<control type="label">
							<left>65</left>
							<top>12</top>
							<width>550</width>
							<height>40</height>
							<label>[B][COLOR white]$INFO[ListItem.Label][/COLOR][/B]$INFO[ListItem.Title, - ]</label>
							<font>Font_Reg32</font>
							<textcolor>$VAR[FontColorVar]</textcolor>
						</control>
						<control type="label">
							<left>630</left>
							<top>14</top>
							<width>300</width>
							<height>40</height>
							<label>$INFO[ListItem.StartDate] - $INFO[ListItem.StartTime]</label>
							<font>Font_Reg22</font>
							<textcolor>grey</textcolor>
							<visible>!String.IsEmpty(ListItem.StartDate) + !String.IsEmpty(ListItem.StartTime)</visible>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="72">
					<left>1843</left>
					<top>96</top>
					<width>46</width>
					<height>830</height>
					<include>Animation_VerticalScrollBar</include>
					<onleft>50</onleft>
					<onright>50</onright>
				</control>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(PVRHideTopBar)</visible>
			<include content="Animation_Slide_Top_Window">
				<param name="slide">90</param>
			</include>
			<include content="Animation_Slide_Top_Visible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="breadcrumbs_label">$VAR[BreadcrumbsPVRRecordingsVar]</param>
				<param name="breadcrumbs_icon">record.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenu_MouseOverlay</include>
		<control type="group">
			<include>MediaMenu_Common</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenu_PVR</include>
				<include>MediaMenu_Common_Bottom</include>
			</control>
		</control>
	</controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>50,51,52,53,54,55,56,500,501,502,503,504,505,506</views>
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[PVRBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[PVRAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[PVRAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">220</param>
			</include>
			<include>FloorRight</include>
		</control>
		<control type="group">
			<visible>!Window.IsActive(pvrguideinfo)</visible>
			<include>AnimationInfoDialog</include>
			<include>View50PosterList</include>
			<include>View51SimpleList</include>
			<include>View52TwinList</include>
			<include>View53InfoList1</include>
			<include>View54InfoList2</include>
			<include>View55LowList</include>
			<include>View563Panel</include>
			<include>View500BigPosterList</include>
			<include>View501BigSimpleList</include>
			<include>View502BigTwinList</include>
			<include>View503BigInfoList1</include>
			<include>View504BigInfoList2</include>
			<include>View505BigLowList</include>
			<include>View506Big3Panel</include>
		</control>
		<control type="group">
				<visible>Control.IsVisible(50) | Control.IsVisible(500) | Control.IsVisible(55) | Control.IsVisible(505)</visible>
				<animation effect="slide" end="90,20" time="240" tween="cubic" condition="Control.IsVisible(55)">Conditional</animation>
				<include content="AnimationSlideBottomWindow">
					<param name="slide">200</param>
				</include>
				<include content="AnimationSlideBottomVisible">
					<param name="slide">200</param>
				</include>
				<include>MediaFlagsDefault</include>
			</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(PVRHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[PVRAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[PVRAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$VAR[BreadcrumbsPVRRecordingsVar]</param>
				<param name="icon">record.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuPVR</include>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>

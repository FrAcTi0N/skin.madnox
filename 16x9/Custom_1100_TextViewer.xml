<?xml version="1.0" encoding="utf-8"?>
<window id="1100" type="dialog">
	<defaultcontrol>8000</defaultcontrol>
	<include>AnimationDialogPopupWindow</include>
	<onunload>ClearProperty(TextViewerHeader,home)</onunload>
	<onunload>ClearProperty(TextViewerText,home)</onunload>
	<controls>
		<control type="group">
			<include content="DialogBackground">
				<param name="width" value="1220" />
				<param name="height" value="790" />
				<param name="label">$INFO[Window(home).Property(TextViewerHeader)]</param>
			</include>
			<control type="button" id="8000">
				<onleft>100</onleft>
				<ondown>100</ondown>
				<include>DialogButtonClose</include>
			</control>
			<control type="textbox" id="100">
				<left>60</left>
				<right>60</right>
				<top>110</top>
				<bottom>92</bottom>
				<onleft>60</onleft>
				<onright>60</onright>
				<font>Font36_Reg_11</font>
				<pagecontrol>60</pagecontrol>
				<textcolor>$VAR[DialogTextColorVar]</textcolor>
				<label>$INFO[Window(home).Property(TextViewerText)]</label>
			</control>
			<control type="image">
				<include>DialogHorizontalSeparator</include>
			</control>
			<control type="label">
				<include>DialogItemCountLabel</include>
				<label>$INFO[Container(100).CurrentPage,$LOCALIZE[31000] ]$INFO[Container(100).NumPages,/]</label>
			</control>
			<control type="scrollbar" id="60">
				<include>DialogScrollBar</include>
			</control>
		</control>
	</controls>
</window>
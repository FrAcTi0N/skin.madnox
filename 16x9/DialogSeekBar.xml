<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(fullscreeninfo) | Player.ShowInfo</visible>
	<visible>!Window.IsActive(videobookmarks) + !Window.IsActive(dialogsettings.xml) + !Window.IsActive(dialogselect.xml) + !Window.IsActive(subtitlesearch) + !Window.IsActive(pvrosdChannels) + !Window.IsActive(pvrchannelguide) + !Window.IsActive(teletext) + !Window.IsActive(1118)</visible>
	<visible>Window.IsActive(fullscreenvideo)</visible>
	<zorder>0</zorder>
	<controls>
		<control type="image">
			<bottom>90</bottom>
			<width>1920</width>
			<height>500</height>
			<texture>home/gradient.png</texture>
			<include>Animation_CommonFade</include>
			<visible>Window.IsActive(fullscreeninfo)</visible>
		</control>
		<control type="grouplist">
			<include>FullscreenDimensions</include>
			<align>center</align>
			<itemgap>20</itemgap>
			<orientation>horizontal</orientation>
			<include>Animation_VisibleFade</include>
			<visible>!Player.Caching + [Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
			<control type="label">
				<width>auto</width>
				<align>center</align>
				<font>Font120_Bold_Caps</font>
				<textcolor>grey3</textcolor>
				<label>$VAR[SeekLabelVar]</label>
			</control>
			<control type="label">
				<width>auto</width>
				<align>center</align>
				<font>Font120_Icon</font>
				<textcolor>grey3</textcolor>
				<label>$VAR[SeekIconVar]</label>
			</control>
		</control>
		<control type="group">
			<include content="Animation_Slide_Bottom_Window">
				<param name="slide">110</param>
			</include>
			<include content="Animation_Slide_Bottom_Visible">
				<param name="slide">110</param>
			</include>
			<top>970</top>
			<control type="group">
				<animation effect="slide" end="0,-88" time="300" tween="quadratic" easing="out" condition="Window.IsActive(videoosd)">Conditional</animation>
				<control type="image">
					<width>1920</width>
					<height>20</height>
					<texture colordiffuse="$VAR[GlowColorVar]">panels/glow-bottom.png</texture>
				</control>
				<control type="image">
					<width>1920</width>
					<height>198</height>
					<texture colordiffuse="$VAR[PanelColorVar]" border="20">panels/osd-back.png</texture>
				</control>
			</control>
			<control type="group">
				<bottom>10</bottom>
				<width>1920</width>
				<height>40</height>
				<control type="progress">
					<centerleft>50%</centerleft>
					<bottom>39</bottom>
					<width>1862</width>
					<info>Player.ProgressCache</info>
					<texturebg border="8">panels/progress-control/progress-back.png</texturebg>
					<midtexture border="8">panels/progress-control/progress-mid-cache.png</midtexture>
				</control>
				<control type="progress">
					<centerleft>50%</centerleft>
					<bottom>39</bottom>
					<width>1862</width>
					<texturebg border="8">panels/progress-control/progress-back-cache.png</texturebg>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<left>30</left>
					<width>350</width>
					<height>40</height>
					<align>left</align>
					<font>Font28_Reg</font>
					<textcolor>grey</textcolor>
					<label>$INFO[Player.Time(hh:mm:ss),, / ]$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
				<control type="label">
					<right>30</right>
					<width>350</width>
					<height>40</height>
					<align>right</align>
					<font>Font28_Reg</font>
					<textcolor>grey</textcolor>
					<label>$INFO[System.Time,, / ]$INFO[Player.FinishTime]</label>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<width>1220</width>
					<height>40</height>
					<align>center</align>
					<font>Font28_Reg</font>
					<textcolor>grey</textcolor>
					<label>$VAR[PlayerLabelVar]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
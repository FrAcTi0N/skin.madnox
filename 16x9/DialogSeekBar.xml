<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.Paused + !Player.Caching] | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(videoosd) | Window.IsActive(playerprocessinfo) | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput)</visible>
	<visible>![Window.IsActive(sliderdialog) | Window.IsActive(pvrosdchannels) | Window.IsActive(pvrchannelguide) | Window.IsActive(visualisation)]</visible>
	<visible>Window.IsActive(fullscreenvideo) | Window.IsActive(visualisation)</visible>
	<zorder>0</zorder>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(videobookmarks) + !Window.IsActive(dialogsettings.xml) + !Window.IsActive(dialogselect.xml) + !Window.IsActive(subtitlesearch) + !Window.IsActive(pvrosdChannels) + !Window.IsActive(pvrchannelguide) + !Window.IsActive(teletext) + !Window.IsActive(1111)</visible>
			<include>AnimationSlideBottomVisible</include>
			<include>AnimationSlideBottomWindow</include>
			<control type="image">
				<visible>Player.ShowInfo + Window.IsActive(fullscreenvideo)</visible>
				<animation effect="slide" end="0,-84" time="480" condition="Window.IsActive(videoosd)">Conditional</animation>
				<include>AnimationVisibleFade</include>
				<bottom>106</bottom>
				<width>1920</width>
				<height>700</height>
				<texture colordiffuse="$VAR[MainMenuBackgroundColorVar]">panels/background-gradient.png</texture>
			</control>
			<control type="group">
				<animation effect="slide" end="0,-84" time="200" condition="Window.IsActive(videoosd)">Conditional</animation>
				<include content="PanelWide">
					<param name="top">954</param>
					<param name="toptexture">974</param>
					<param name="topshadow">954</param>
					<param name="height">220</param>
					<param name="heighttexture">200</param>
				</include>
			</control>
			<control type="group">
				<left>25</left>
				<right>25</right>
				<bottom>41</bottom>
				<height>40</height>
				<centerleft>50%</centerleft>
				<control type="progress">
					<visible>VideoPlayer.HasEpg</visible>
					<info>PVR.EpgEventProgress</info>
				</control>
				<control type="progress">
					<visible>!VideoPlayer.Content(livetv)</visible>
					<info>Player.ProgressCache</info>
					<midtexture border="8">panels/progress-control/progress-mid-cache.png</midtexture>
				</control>
				<control type="progress">
					<visible>!VideoPlayer.HasEpg + !Player.ChannelPreviewActive</visible>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="401">
					<visible>Player.SeekEnabled + !VideoPlayer.HasEpg + !Player.ChannelPreviewActive</visible>
					<bottom>14</bottom>
					<width>1870</width>
					<height>32</height>
					<centerleft>50%</centerleft>
					<texturesliderbar colordiffuse="00FFFFFF">buttons/slider-focus.png</texturesliderbar>
					<textureslidernib>buttons/slider-focus.png</textureslidernib>
					<textureslidernibfocus>buttons/slider-focus.png</textureslidernibfocus>
				</control>
				<control type="slider" id="402">
					<visible>Player.SeekEnabled + VideoPlayer.HasEpg + !Player.ChannelPreviewActive</visible>
					<bottom>14</bottom>
					<width>1870</width>
					<height>32</height>
					<centerleft>50%</centerleft>
					<texturesliderbar colordiffuse="00FFFFFF">buttons/slider-focus.png</texturesliderbar>
					<textureslidernib>buttons/slider-focus.png</textureslidernib>
					<textureslidernibfocus>buttons/slider-focus.png</textureslidernibfocus>
				</control>
				<control type="label">
					<visible>!VideoPlayer.HasEpg</visible>
					<bottom>-24</bottom>
					<width>350</width>
					<height>40</height>
					<align>left</align>
					<font>Font30_Reg</font>
					<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					<label>$INFO[Player.Time(hh:mm:ss),, / ]$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
				<control type="label">
					<visible>VideoPlayer.HasEpg</visible>
					<bottom>-24</bottom>
					<width>350</width>
					<height>40</height>
					<align>left</align>
					<font>Font30_Reg</font>
					<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					<label>$INFO[PVR.EpgEventElapsedTime(hh:mm:ss),, / ]$INFO[PVR.EpgEventDuration(hh:mm:ss)]</label>
				</control>
				<control type="label">
					<visible>!VideoPlayer.HasEpg</visible>
					<bottom>-24</bottom>
					<right>0</right>
					<width>350</width>
					<height>40</height>
					<align>right</align>
					<font>Font30_Reg</font>
					<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					<label>$INFO[System.Time,, / ]$INFO[Player.FinishTime]</label>
				</control>
				<control type="label">
					<visible>VideoPlayer.HasEpg</visible>
					<bottom>-24</bottom>
					<right>0</right>
					<width>350</width>
					<height>40</height>
					<align>right</align>
					<font>Font30_Reg</font>
					<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					<label>$INFO[System.Time,, / ]$INFO[VideoPlayer.EndTime]</label>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<bottom>-24</bottom>
					<width>1220</width>
					<height>40</height>
					<align>center</align>
					<font>Font30_Reg</font>
					<label>$VAR[PlayerLabelVar]</label>
					<textcolor>$VAR[PanelTextColorVar]</textcolor>
				</control>
			</control>
		</control>
		<control type="grouplist">
			<include>AnimationVisibleFade</include>
			<itemgap>20</itemgap>
			<align>center</align>
			<orientation>horizontal</orientation>
			<include>FullScreenDimensions</include>
			<visible>!Player.Caching + [Player.Paused | Player.Forwarding | Player.Rewinding | Player.DisplayAfterSeek]</visible>
			<control type="label">
				<width>auto</width>
				<align>center</align>
				<font>Font120_Bold_Caps</font>
				<label>$VAR[SeekLabelVar]</label>
				<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
			</control>
			<control type="label">
				<width>auto</width>
				<align>center</align>
				<font>Font120_Icon</font>
				<label>$VAR[SeekIconVar]</label>
				<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
			</control>
		</control>
		<!-- Info -->
		<control type="group">
			<visible>Player.ShowInfo + Window.IsActive(fullscreenvideo)</visible>
			<include>AnimationSlideLeftWindow</include>
			<include>AnimationSlideLeftVisible</include>
			<left>15</left>
			<top>612</top>
			<animation effect="slide" end="0,-84" time="300" condition="Window.IsActive(videoosd)">Conditional</animation>
			<!-- <control type="image">
				<include>AnimationVisibleFade</include>
				<bottom>-42</bottom>
				<width>1920</width>
				<height>926</height>
				<texture colordiffuse="$VAR[MainMenuBackgroundColorVar]">panels/widget-gradient.png</texture>
			</control> -->
			<control type="group">
				<visible>VideoPlayer.Content(movies)</visible>
				<include content="NowPlayingHomePortraitContent">
					<param name="right">52</param>
					<param name="case">$VAR[NowPlayingVideoCaseVar]</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeVideoDisableLogo)</param>
					<param name="discart">!Skin.HasSetting(NowPlayingHomeVideoDisableDiscArt)</param>
				</include>
			</control>
			<control type="group">
				<visible>VideoPlayer.Content(episodes)</visible>
				<include content="NowPlayingHomePortraitContent">
					<param name="right">52</param>
					<param name="case">$VAR[NowPlayingVideoCaseVar]</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeVideoDisableLogo)</param>
					<param name="discart">false</param>
				</include>
			</control>
			<control type="group">
				<visible>VideoPlayer.Content(musicvideos)</visible>
				<include>AnimationVisibleFade</include>
				<include content="NowPlayingHomeSquareContent">
					<param name="right">52</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeAudioDisableLogo)</param>
					<param name="discart">!Skin.HasSetting(NowPlayingHomeAudioDisableDiscArt)</param>
				</include>
			</control>
			<control type="group">
				<visible>Pvr.IsPlayingTV | [!VideoPlayer.Content(movies) + !VideoPlayer.Content(episodes) + !VideoPlayer.Content(musicvideos)]</visible>
				<include>AnimationVisibleFade</include>
				<include content="NowPlayingHomeSquareContent">
					<param name="aspect">keep</param>
					<param name="right">52</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeAudioDisableLogo)</param>
					<param name="discart">false</param>
				</include>
			</control>
			<control type="group">
				<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.IsInternetStream</visible>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeMovieInfo),cast)</visible>
					<include>HomeNowPlayingVideoCast</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeMovieInfo),description)</visible>
					<include>HomeNowPlayingPlot</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeMovieInfo),info) + Skin.HasSetting(WidgetHigh)</visible>
					<include>HomeNowPlayingVideoInfo</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeMovieInfo),info) + !Skin.HasSetting(WidgetHigh)</visible>
					<include>HomeNowPlayingVideoInfo2</include>
				</control>
			</control>
			<control type="group">
				<visible>[!VideoPlayer.Content(movies) + !VideoPlayer.Content(episodes)] | Player.IsInternetStream</visible>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeVideoInfo),description) + VideoPlayer.Content(musicvideos)</visible>
					<include>HomeNowPlayingPlotSquare</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeVideoInfo),info) + Skin.HasSetting(WidgetHigh)</visible>
					<include>HomeNowPlayingVideoInfo</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingHomeVideoInfo),info) + !Skin.HasSetting(WidgetHigh)</visible>
					<include>HomeNowPlayingVideoInfo2</include>
				</control>
			</control>
		</control>
		<!-- Media flag info -->
		<control type="group">
			<visible>Player.ShowInfo + Window.IsActive(fullscreenvideo)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">120</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">120</param>
			</include>
			<include content="PanelWide">
				<param name="top">0</param>
				<param name="toptexture">0</param>
				<param name="topshadow">100</param>
				<param name="height">120</param>
				<param name="heighttexture">100</param>
				<param name="flipy">true</param>
			</include>
			<include>MediaFlagsVideoFullscreen</include>
		</control>
	</controls>
</window>
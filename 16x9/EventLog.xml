<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">7000</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>7000</views>
	<controls>
		<!-- Background -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[SystemBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[SystemAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[SystemAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">220</param>
			</include>
			<include>FloorDefault</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>AnimationZoomWindow</include>
			<include content="PanelDefault">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<include>AnimationZoomWindow</include>
			<control type="list" id="7000">
				<top>145</top>
				<left>100</left>
				<width>1720</width>
				<height>791</height>
				<onleft>9050</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="">list</viewtype>
				<itemlayout height="113">
					<control type="image">
						<texture border="30" colordiffuse="$VAR[PanelListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="image">
						<top>10</top>
						<left>30</left>
						<width>93</width>
						<height>93</height>
						<bordersize>5</bordersize>
						<bordertexture border="5">thumbs/frame-listicon.png</bordertexture>
						<texture diffuse="diffuse/rounded5-96x96.png" fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
					</control>
					<control type="label">
						<top>15</top>
						<left>134</left>
						<right>455</right>
						<height>42</height>
						<font>Font32_Reg</font>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>57</top>
						<left>134</left>
						<right>35</right>
						<height>42</height>
						<font>Font29_Cond</font>
						<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
						<label>$INFO[ListItem.Property(Event.Description)]</label>
					</control>
					<control type="label">
						<top>15</top>
						<right>35</right>
						<width>400</width>
						<height>42</height>
						<align>right</align>
						<font>Font32_Reg</font>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="113">
					<control type="image">
						<texture border="10" colordiffuse="$VAR[PanelHighlightColorVar]">buttons/list-select-focus.png</texture>
						<animation effect="fade" start="100" end="30" time="100" condition="!Control.HasFocus(7000)">Conditional</animation>
					</control>
					<control type="image">
						<top>10</top>
						<left>30</left>
						<width>93</width>
						<height>93</height>
						<bordersize>5</bordersize>
						<bordertexture border="5">thumbs/frame-listicon.png</bordertexture>
						<texture diffuse="diffuse/rounded5-96x96.png" fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
					</control>
					<control type="label">
						<top>15</top>
						<left>134</left>
						<right>455</right>
						<height>42</height>
						<font>Font32_Reg</font>
						<textcolor>$VAR[PanelFocusTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<top>57</top>
						<left>134</left>
						<right>35</right>
						<height>42</height>
						<font>Font29_Cond</font>
						<textcolor>$VAR[PanelFocusTextColorVar]</textcolor>
						<label>$INFO[ListItem.Property(Event.Description)]</label>
					</control>
					<control type="label">
						<top>15</top>
						<right>35</right>
						<width>400</width>
						<height>42</height>
						<align>right</align>
						<font>Font32_Reg</font>
						<textcolor>$VAR[PanelFocusTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<right>80</right>
				<top>120</top>
				<bottom>120</bottom>
				<onleft>7000</onleft>
			</control>
		</control>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[SystemAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[SystemAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$LOCALIZE[13000] / $LOCALIZE[14111]</param>
				<param name="icon">info.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>7000</onright>
				<onback>7000</onback>
				<include>MediaMenuSystem</include>
				<control type="radiobutton" id="4">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/ascending.png</param>
						<param name="iconoff">icons/mediamenu/descending.png</param>
					</include>
					<label>$INFO[Container.SortOrder]</label>
				</control>
				<control type="radiobutton" id="21">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/level.png</param>
						<param name="iconoff">icons/mediamenu/level.png</param>
					</include>
				</control>
				<control type="radiobutton" id="22">
					<include>MediaMenuIconButton</include>
					<visible>Control.IsEnabled(22)</visible>
				</control>
				<control type="radiobutton" id="20">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/clear.png</param>
						<param name="iconoff">icons/mediamenu/clear.png</param>
					</include>
					<label>$LOCALIZE[192]</label>
					<visible>Control.IsEnabled(20)</visible>
				</control>
				<control type="radiobutton" id="501">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/settings.png</param>
						<param name="iconoff">icons/mediamenu/settings.png</param>
					</include>
					<label>$LOCALIZE[5]</label>
					<onclick>ActivateWindow(systemsettings,logging)</onclick>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
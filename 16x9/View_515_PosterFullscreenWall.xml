<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View515PosterFullscreenWall">
		<control type="group">
			<visible>Control.IsVisible(515)</visible>
			<animation effect="slide" end="0,-40" time="240" condition="Skin.HasSetting(ViewsHideTopBar)">Conditional</animation>
			<control type="panel" id="515">
				<top>50</top>
				<left>10</left>
				<width>1900</width>
				<height>1080</height>
				<onleft>9050</onleft>
				<onright>60515</onright>
				<pagecontrol>60515</pagecontrol>
				<itemlayout height="397" width="271.4" condition="Container.Content(movies) | Container.Content(sets) | Container.Content(actors) | Container.Content(directors) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)">
					<control type="image">
						<bordersize>10</bordersize>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
					</control>
					<control type="image">
						<texture border="20">thumbs/overlay.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="397" width="271.4" condition="Container.Content(movies) | Container.Content(sets) | Container.Content(actors) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)">
					<control type="image">
						<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/widget-select-focus.png</texture>
					</control>
					<control type="group">
						<animation  type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="300" center="auto" />
						</animation>
						<control type="image">
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
						</control>
						<control type="image">
							<texture border="20">thumbs/overlay.png</texture>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="380" width="380">
					<control type="image">
						<bordersize>10</bordersize>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
					</control>
					<control type="image">
						<texture border="20">thumbs/overlay.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="380" width="380">
					<control type="image">
						<bordersize>10</bordersize>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
					</control>
					<control type="image">
						<texture border="20">thumbs/overlay.png</texture>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60515">
				<right>-20</right>
				<top>0</top>
				<bottom>0</bottom>
				<onleft>515</onleft>
			</control>
		</control>
	</include>
</includes>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<backgroundcolor>FF000000</backgroundcolor>
	<controls>
		<!-- Background -->
		<include>AnimationWindowFade</include>
		<control type="visualisation" id="2">
			<include>FullScreenDimensions</include>
		</control>
		<control type="multiimage">
			<visible>Visualisation.Enabled</visible>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<include>FullScreenDimensions</include>
			<randomize>true</randomize>
			<aspectratio>scale</aspectratio>
			<fadetime>TextureFadeTime</fadetime>
			<imagepath background="true" colordiffuse="AAFFFFFF">$VAR[NowPlayingMusicVizFanArtVar]</imagepath>
		</control>
		<control type="multiimage">
			<visible>!Visualisation.Enabled</visible>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<include>FullScreenDimensions</include>
			<randomize>true</randomize>
			<aspectratio>scale</aspectratio>
			<fadetime>TextureFadeTime</fadetime>
			<imagepath background="true">$VAR[NowPlayingMusicVizFanArtVar]</imagepath>
		</control>
		<control type="image">
			<visible>Skin.HasSetting(DisableMusicVizAnimatedLyrics) + Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
			<include>FullScreenDimensions</include>
			<texture>colors/black50.png</texture>
		</control>
		<!-- Background scroll labels -->
		<control type="fadelabel">
			<top>380</top>
			<width>1920</width>
			<height>300</height>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>Font600_Bold_Caps</font>
			<pauseatend>200</pauseatend>
			<label>$INFO[Player.Title]</label>
			<label>$INFO[MusicPlayer.Artist]</label>
			<label>$INFO[MusicPlayer.Album]</label>
			<textcolor>1FFFFFFF</textcolor>
			<textoffsetx>20</textoffsetx>
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(NowPlayingMusicVizBackgroundInfo)</visible>
		</control>
		<control type="fadelabel">
			<left>980</left>
			<width>1080</width>
			<scroll>true</scroll>
			<scrollout>true</scrollout>
			<font>Font600_Bold_Caps</font>
			<pauseatend>200</pauseatend>
			<label>$INFO[MusicPlayer.Artist]</label>
			<label>$INFO[MusicPlayer.Album]</label>
			<label>$INFO[Player.Title]</label>
			<textcolor>1FFFFFFF</textcolor>
			<textoffsetx>20</textoffsetx>
			<resetonlabelchange>true</resetonlabelchange>
			<visible>Skin.HasSetting(NowPlayingMusicVizBackgroundInfo)</visible>
			<animation effect="rotate" center="auto" end="90" condition="true">Conditonal</animation>
		</control>
		<!-- Music info -->
		<control type="image">
			<visible>[Player.ShowInfo + String.IsEmpty(Skin.String(NowPlayingMusicVizInfo))] | String.IsEqual(Skin.String(NowPlayingMusicVizInfo),persistant)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">440</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">440</param>
			</include>
			<top>480</top>
			<width>1920</width>
			<height>600</height>
			<texture colordiffuse="FF000000">panels/background-gradient.png</texture>
		</control>
		<control type="group">
			<visible>[Player.ShowInfo + String.IsEmpty(Skin.String(NowPlayingMusicVizInfo))] | String.IsEqual(Skin.String(NowPlayingMusicVizInfo),persistant)</visible>
			<left>15</left>
			<bottom>15</bottom>
			<right>15</right>
			<height>400</height>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">440</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">440</param>
			</include>
			<control type="group">
				<visible>[String.IsEqual(Skin.String(NowPlayingMusicVizMusicInfo),none) + !Player.IsInternetStream + !Pvr.IsPlayingRadio] | [String.IsEqual(Skin.String(NowPlayingMusicVizAudioInfo),none) + [Player.IsInternetStream | Pvr.IsPlayingRadio]]</visible>
				<control type="group">
					<visible>String.IsEmpty(Skin.String(NowPlayingMusicVizCase))</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">0</param>
						<param name="right">52</param>
						<param name="leftinfo">390</param>
						<param name="casewidth">400</param>
						<param name="border">10</param>
						<param name="discborder">20</param>
						<param name="slide">125</param>
						<param name="slidedisc">170</param>
					</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizCase),glass)</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">0</param>
						<param name="right">52</param>
						<param name="leftinfo">390</param>
						<param name="casewidth">400</param>
						<param name="border">20</param>
						<param name="discborder">20</param>
						<param name="slide">125</param>
						<param name="slidedisc">170</param>
					</include>
				</control>
				<control type="group">
					<visible>String.Contains(Skin.String(NowPlayingMusicVizCase),cd)</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">30</param>
						<param name="right">52</param>
						<param name="leftinfo">420</param>
						<param name="casewidth">430</param>
						<param name="border">15</param>
						<param name="discborder">25</param>
						<param name="slide">120</param>
						<param name="slidedisc">166</param>
					</include>
				</control>
			</control>
			<control type="group">
				<visible>[!String.IsEqual(Skin.String(NowPlayingMusicVizMusicInfo),none) + !Player.IsInternetStream + !Pvr.IsPlayingRadio] | [!String.IsEqual(Skin.String(NowPlayingMusicVizAudioInfo),none) + [Player.IsInternetStream | Pvr.IsPlayingRadio]]</visible>
				<control type="group">
					<visible>String.IsEmpty(Skin.String(NowPlayingMusicVizCase))</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">0</param>
						<param name="right">660</param>
						<param name="leftinfo">390</param>
						<param name="casewidth">400</param>
						<param name="border">10</param>
						<param name="discborder">20</param>
						<param name="slide">125</param>
						<param name="slidedisc">170</param>
					</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizCase),glass)</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">0</param>
						<param name="right">760</param>
						<param name="leftinfo">390</param>
						<param name="casewidth">400</param>
						<param name="border">20</param>
						<param name="discborder">20</param>
						<param name="slide">125</param>
						<param name="slidedisc">170</param>
					</include>
				</control>
				<control type="group">
					<visible>String.Contains(Skin.String(NowPlayingMusicVizCase),cd)</visible>
					<include>AnimationVisibleFade</include>
					<include content="NowPlayingMusicVizContent">
						<param name="left">30</param>
						<param name="right">760</param>
						<param name="leftinfo">420</param>
						<param name="casewidth">430</param>
						<param name="border">15</param>
						<param name="discborder">25</param>
						<param name="slide">120</param>
						<param name="slidedisc">166</param>
					</include>
				</control>
			</control>
			<control type="group">
				<visible>!Pvr.IsPlayingRadio + !Player.IsInternetStream</visible>
				<control type="group">
					<visible>String.IsEmpty(Skin.String(NowPlayingMusicVizMusicInfo)) + MusicPlayer.HasNext</visible>
					<include>NowPlayingMusicVizNext</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizMusicInfo),tracks) + MusicPlayer.HasNext</visible>
					<include>NowPlayingMusicVizTracks</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizMusicInfo),description) + [!String.IsEmpty(MusicPlayer.Property(Artist_Description)) | !String.IsEmpty(MusicPlayer.Property(Artist_Description)) | !String.IsEmpty(Window(Home).Property(SkinHelper.Player.Plot))]</visible>
					<include>NowPlayingMusicVizPlot</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizMusicInfo),info)</visible>
					<include>NowPlayingMusicVizInfo</include>
				</control>
			</control>
			<control type="group">
				<visible>Pvr.IsPlayingRadio | Player.IsInternetStream</visible>
				<control type="group">
					<visible>String.IsEmpty(Skin.String(NowPlayingMusicVizAudioInfo)) + MusicPlayer.HasNext</visible>
					<include>NowPlayingMusicVizNext</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizAudioInfo),tracks) + MusicPlayer.HasNext</visible>
					<include>NowPlayingMusicVizTracks</include>
				</control>
				<control type="group">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizAudioInfo),description) + [!String.IsEmpty(MusicPlayer.Property(Artist_Description)) | !String.IsEmpty(MusicPlayer.Property(Artist_Description)) | !String.IsEmpty(Window(Home).Property(SkinHelper.Player.Plot))]</visible>
					<include>NowPlayingMusicVizPlot</include>
				</control>
				<control type="grouplist">
					<visible>String.IsEqual(Skin.String(NowPlayingMusicVizAudioInfo),info)</visible>
					<include>NowPlayingMusicVizInfo</include>
				</control>
			</control>
		</control>
		<!-- Button to prevent mouse menu popup unless at top of screen -->
		<control type="button" id="1000">
			<top>1</top>
			<width>1920</width>
			<height>1080</height>
			<texturefocus />
			<texturenofocus />
		</control>
	</controls>
</window>
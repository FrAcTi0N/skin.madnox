<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<backgroundcolor>FF000000</backgroundcolor>
	<controls>
		<include>AnimationWindowFade</include>
		<control type="visualisation">
			<include>FullScreenDimensions</include>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<imagepath background="true" colordiffuse="88FFFFFF">$VAR[NowPlayingFanartVar]</imagepath>
			<randomize>true</randomize>
			<fadetime>TextureFadeTime</fadetime>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<visible>Visualisation.Enabled</visible>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<aspectratio>scale</aspectratio>
			<imagepath background="true">$VAR[NowPlayingFanartVar]</imagepath>
			<randomize>true</randomize>
			<fadetime>TextureFadeTime</fadetime>
			<animation type="Conditional" pulse="true" condition="Skin.HasSetting(MusicOSDAnimatedBackground)">
				<effect type="zoom" start="110" end="120" center="auto" time="12000" tween="sine" easing="inout"/>
				<effect type="slide" start="-20,-20" end="20,20" time="6000" tween="sine" easing="inout"/>
			</animation>
			<visible>!Visualisation.Enabled</visible>
		</control>
		<control type="image">
			<top>480</top>
			<width>1920</width>
			<height>600</height>
			<texture colordiffuse="FF000000">panels/background-gradient.png</texture>
		</control>
		<control type="group">
			<bottom>15</bottom>
			<height>400</height>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">440</param>
			</include>
			<control type="group">
				<visible>String.IsEmpty(Skin.String(MainMenuNowPlayingMusicCase))</visible>
				<include>AnimationVisibleFade</include>
				<include content="NowPlayingSquareContent">
					<param name="left">15</param>
					<param name="right">-45</param>
					<param name="width">400</param>
					<param name="height">400</param>
					<param name="leftinfo">405</param>
					<param name="casewidth">400</param>
					<param name="border">10</param>
					<param name="discborder">20</param>
					<param name="slide">140</param>
					<param name="slidedisc">170</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeAudioDisableLogo)</param>
					<param name="discart">!Skin.HasSetting(NowPlayingHomeAudioDisableDiscArt)</param>
				</include>
			</control>
			<control type="group">
				<visible>String.Contains(Skin.String(MainMenuNowPlayingMusicCase),glass)</visible>
				<include>AnimationVisibleFade</include>
				<include content="NowPlayingSquareContent">
					<param name="left">15</param>
					<param name="right">-45</param>
					<param name="width">347</param>
					<param name="height">347</param>
					<param name="leftinfo">367</param>
					<param name="casewidth">347</param>
					<param name="border">15</param>
					<param name="discborder">20</param>
					<param name="slide">114</param>
					<param name="slidedisc">144</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeAudioDisableLogo)</param>
					<param name="discart">!Skin.HasSetting(NowPlayingHomeAudioDisableDiscArt)</param>
				</include>
			</control>
			<control type="group">
				<visible>String.Contains(Skin.String(MainMenuNowPlayingMusicCase),cd)</visible>
				<include>AnimationVisibleFade</include>
				<include content="NowPlayingSquareContent">
					<param name="left">40</param>
					<param name="right">-45</param>
					<param name="width">347</param>
					<param name="height">347</param>
					<param name="leftinfo">390</param>
					<param name="casewidth">370</param>
					<param name="border">15</param>
					<param name="discborder">25</param>
					<param name="slide">109</param>
					<param name="slidedisc">134</param>
					<param name="logo">!Skin.HasSetting(NowPlayingHomeAudioDisableLogo)</param>
					<param name="discart">!Skin.HasSetting(NowPlayingHomeAudioDisableDiscArt)</param>
				</include>
			</control>
			
		</control>
	</controls>
</window>

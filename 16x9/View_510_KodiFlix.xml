<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View510KodiFlix">
		<!-- Background fade -->
		<control type ="image">
			<visible>Control.IsVisible(510)</visible>
			<width>1300</width>
			<texture colordiffuse="FF000000">panels/kodiflix-gradient.png</texture>
		</control>
		<!-- Floor -->
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
			</include>
			<control type="group">
				<visible>!Skin.HasSetting(View510HideFloor)</visible>
				<include>FloorDefault</include>
				<include>FloorHighlightLeft</include>
			</control>
			<include content="FloorShadow">
				<param name="visible">Skin.HasSetting(View510HideFloor)</param>
			</include>
		</control>
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">525</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">525</param>
			</include>
			<!-- Info -->
			<include content="ViewKodiFlixInfoPanel">
				<param name="id">510</param>
				<param name="textboxheight">120</param>
				<param name="textboxfont">Font28_Reg</param>
			</include>
			<!-- Panel -->
			<control type="wraplist" id="510">
				<top>551</top>
				<left>-192</left>
				<width>2220</width>
				<height>764</height>
				<onup>9050</onup>
				<pagecontrol>6080</pagecontrol>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<viewtype label="$LOCALIZE[31247]">icon</viewtype>
				<itemlayout width="256" height="374">
					<control type="group">
						<visible>!Skin.HasSetting(View510VideoCase)</visible>
						<control type="group">
							<visible>!Skin.HasSetting(View510HideReflect)</visible>
							<top>361</top>
							<height>374</height>
							<include>ViewArtworkReflect</include>
						</control>
						<include content="ViewArtwork">
							<param name="diffuse">diffuse/rounded5-532x395</param>
						</include>
					</control>
					<control type="group">
						<visible>Skin.HasSetting(View510VideoCase)</visible>
						<control type="group">
							<visible>!Skin.HasSetting(View510HideReflect)</visible>
							<top>361</top>
							<height>374</height>
							<include content="ViewArtworkVideoCaseReflect">
								<param name="bordersize">16,18,16,36</param>
							</include>
						</control>
						<include content="ViewArtworkVideoCase">
							<param name="logoheight">31</param>
							<param name="bordersize">16,36,16,18</param>
							<param name="diffuse">diffuse/rounded5-532x395</param>
						</include>
					</control>
				</itemlayout>
				<focusedlayout width="256" height="374">
					<control type="group">
						<animation effect="zoom" start="100" end="120" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="120" end="100" center="auto" time="160">unfocus</animation>
						<control type="group">
							<visible>!Skin.HasSetting(View510VideoCase)</visible>
							<control type="group">
								<visible>!Skin.HasSetting(View510HideReflect)</visible>
								<top>361</top>
								<height>374</height>
								<include>ViewArtworkReflect</include>
							</control>
							<include content="ViewArtwork">
								<param name="diffuse">diffuse/rounded5-532x395</param>
							</include>
						</control>
						<control type="group">
							<visible>Skin.HasSetting(View510VideoCase)</visible>
							<control type="group">
								<visible>!Skin.HasSetting(View510HideReflect)</visible>
								<top>361</top>
								<height>374</height>
								<include content="ViewArtworkVideoCaseReflect">
									<param name="bordersize">16,18,16,36</param>
								</include>
							</control>
							<include content="ViewArtworkVideoCase">
								<param name="logoheight">31</param>
								<param name="bordersize">16,36,16,18</param>
								<param name="diffuse">diffuse/rounded5-532x395</param>
							</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!-- <control type="scrollbar" id="6057">
				<right>80</right>
				<top>144</top>
				<bottom>144</bottom>
				<onleft>80</onleft>
			</control> -->
		</control>
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
			</include>
			<include condition="Window.IsVisible(MyVideoNav.xml)" content="MediaFlagsTVShowsLeft">
				<param name="align">left</param>
				<param name="left">50</param>
				<param name="bottom">20</param>
			</include>
			<include condition="Window.IsVisible(MyVideoNav.xml)" content="MediaFlagsVideos8">
				<param name="align">left</param>
				<param name="left">50</param>
				<param name="bottom">20</param>
			</include>
		</control>
	</include>
</includes>
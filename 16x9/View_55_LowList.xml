<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View55LowList">
		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<!-- Panel -->
			<include content="PanelWide">
				<param name="top">618</param>
				<param name="toptexture">630</param>
				<param name="topshadow">619</param>
				<param name="height">470</param>
				<param name="heighttexture">450</param>
			</include>
			<!-- Art -->
			<control type="group">
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seaons) + !Container.Content(episodes)</visible>
				<control type="image">
					<bottom>0</bottom>
					<width>442</width>
					<height>653</height>
					<fadetime>TextureFadeTime</fadetime>
					<texture background="true" border="20">thumbs/thumb-frame.png</texture>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>442</width>
					<height>653</height>
					<fadetime>TextureFadeTime</fadetime>
					<bordersize>10</bordersize>
					<texture diffuse="diffuse/rounded5-442x653.png" background="true">$VAR[PosterVar]</texture>
				</control>
			</control>
			<control type="group">
				<visible>Container.Content(albums) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(songs)</visible>
				<control type="image">
					<animation effect="rotate" end="-360" center="auto" time="4800" loop="true" delay="500" reversible="false" condition="[String.IsEqual(ListItem.Album,MusicPlayer.Album) | String.IsEqual(ListItem.Title,Player.Title)]">Conditional</animation>
					<left>60</left>
					<bottom>250</bottom>
					<width>420</width>
					<height>420</height>
					<fadetime>TextureFadeTime</fadetime>
					<texture diffuse="diffuse/disc.png" background="true">$VAR[DiscArtVar]</texture>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>442</width>
					<height>442</height>
					<fadetime>TextureFadeTime</fadetime>
					<texture background="true" border="20">thumbs/thumb-frame.png</texture>
				</control>
				<control type="image">
					<left>32</left>
					<bottom>0</bottom>
					<width>480</width>
					<height>480</height>
					<fadetime>TextureFadeTime</fadetime>
					<bordersize>20</bordersize>
					<texture diffuse="diffuse/rounded5-442x653.png" background="true">$VAR[PosterVar]</texture>
				</control>
				<control type="image">
					<bottom>0</bottom>
					<width>510</width>
					<height>480</height>
					<fadetime>TextureFadeTime</fadetime>
					<texture background="true" border="20">thumbs/caseother/cd.png</texture>
				</control>
			</control>
			<!-- List -->
			<control type="fixedlist" id="55">
				<left>500</left>
				<bottom>10</bottom>
				<width>869</width>
				<height>432</height>
				<onleft>9000</onleft>
				<onright>65</onright>
				<viewtype label="Low list">low list</viewtype>
				<pagecontrol>65</pagecontrol>
				<preloaditems>2</preloaditems>
				<focusposition>2</focusposition>
				<movement>1</movement>
				<include>ViewContainerList</include>
			</control>
			<control type="image">
				<left>1369</left>
				<top>638</top>
				<width>4</width>
				<height>442</height>
				<texture colordiffuse="$VAR[PanelListSeparatorColorVar]">panels/line-vertical.png</texture>
			</control>
			<control type="scrollbar" id="65">
				<left>1350</left>
				<top>680</top>
				<bottom>10</bottom>
				<onleft>55</onleft>
				<onright>61</onright>
			</control>
			<control type="group">
				<bottom>442</bottom>
				<right>20</right>
				<width>510</width>
				<height>201</height>
				<control type="image">
					<fadetime>TextureFadeTime</fadetime>
					<aspectratio aligny="bottom">stretch</aspectratio>
					<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
					<visible>!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)</visible>
				</control>
				<control type="image">
					<visible>Container.Content(artists) | Container.Content(albums) | Container.Content(songs)</visible>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>TextureFadeTime</fadetime>
					<texture background="true">$VAR[MusicClearLogoVar]</texture>
				</control>
			</control>
			<control type="image">
				<bottom>95</bottom>
				<right>0</right>
				<width>550</width>
				<height>4</height>
				<texture colordiffuse="$VAR[PanelListSeparatorColorVar]">panels/line-horizontal.png</texture>
			</control>
			<control type="group">
				<top>648</top>
				<right>20</right>
				<width>510</width>
				<height>323</height>
				<control type="textbox">
					<font>Font30_Reg_95</font>
					<label>$VAR[PlotVar]</label>
					<pagecontrol>61</pagecontrol>
					<autoscroll time="3000" delay="4000" repeat="5000">!Skin.HasSetting(DisableAutoScroll) + !Control.HasFocus(61)</autoscroll>
				</control>
				<control type="scrollbar" id="61">
					<right>-40</right>
					<onleft>65</onleft>
				</control>
			</control>
		</control>
	</include>
</includes>
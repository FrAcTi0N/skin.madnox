<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View517BannerFullscreenWall">
		<control type="group">
			<visible>Control.IsVisible(517)</visible>
			<animation effect="slide" end="0,-40" time="240" condition="Skin.HasSetting(ViewsHideTopBar)">Conditional</animation>
			<control type="panel" id="517">
				<top>50</top>
				<left>10</left>
				<width>1900</width>
				<height>1080</height>
				<onleft>9050</onleft>
				<onright>60517</onright>
				<pagecontrol>60517</pagecontrol>
				<itemlayout height="192" width="950">
					<control type="image">
						<bordersize>10</bordersize>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture diffuse="diffuse/rounded5-532x800.png">$VAR[BannerVar]</texture>
					</control>
					<control type="image">
						<texture border="20">thumbs/overlay.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="192" width="950">
					<control type="image">
						<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/widget-select-focus.png</texture>
					</control>
					<control type="group">
						<animation  type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="300" center="auto" />
						</animation>
						<control type="image">
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<texture diffuse="diffuse/rounded5-532x800.png">$VAR[BannerVar]</texture>
						</control>
						<control type="image">
							<texture border="20">thumbs/overlay.png</texture>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60517">
				<right>-20</right>
				<top>0</top>
				<bottom>0</bottom>
				<onleft>517</onleft>
			</control>
		</control>
	</include>
</includes>
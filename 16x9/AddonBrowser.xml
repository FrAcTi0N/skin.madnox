<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>50</views>
	<controls>
		<!-- Background -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[AddonBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[SystemAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[SystemAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">220</param>
			</include>
			<include>FloorRight</include>
		</control>
		<!-- Views -->
		<control type="group">
			<visible>!Window.IsVisible(addoninformation)</visible>
			<animation effect="fade" time="400" tween="sine" easing="out">Visible</animation>
			<animation effect="fade" time="400" tween="sine" easing="out">Hidden</animation>
			<control type="group">
				<include>View50List</include>
			</control>
		</control>
		<!-- Top bar -->
		<control type="group">
			<visible>!Skin.HasSetting(AddonHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$LOCALIZE[24001]</param>
				<param name="icon">addons.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuCommonTop</include>
				<!-- Hide foreign -->
				<control type="radiobutton" id="7">
					<include>MediaMenuIconButton</include>
					<label>$LOCALIZE[25001]</label>
					<visible>Control.IsEnabled(7)</visible>
				</control>
				<!-- Hide Incompatible -->
				<control type="radiobutton" id="8">
					<include>MediaMenuIconButton</include>
					<label>$LOCALIZE[24999]</label>
					<visible>Control.IsEnabled(8)</visible>
				</control>
				<!-- Check for repository updates -->
				<control type="radiobutton" id="9">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/refresh.png</param>
						<param name="iconoff">icons/mediamenu/refresh.png</param>
					</include>
					<label>$LOCALIZE[24034]</label>
				</control>
				<!-- Addon Settings -->
				<control type="radiobutton" id="5">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/settings.png</param>
						<param name="iconoff">icons/mediamenu/settings.png</param>
					</include>
					<label>$LOCALIZE[10004]</label>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<controls>
		<include>Dialog_CloseOnclick</include>
		<control type="group">
			<visible>!Window.IsActive(Slideshow)</visible>
			<include>OpenClose_Fade</include>
			<control type="image">
				<include>FullscreenDimensions</include>
				<texture>colors/black.png</texture>
			</control>
			<control type="image">
				<include>FullscreenDimensions</include>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[ListItem.FolderPath]</texture>
			</control>
		</control>
		<control type="group">
			<include content="Animation_Slide_Left_Window">
				<param name="slide">220</param>
			</include>
			<control type="image">
				<left>549</left>
				<width>20</width>
				<height>1080</height>
				<texture colordiffuse="$VAR[GlowColorVar]">panels/glow-right.png</texture>
			</control>
			<control type="image">
				<width>570</width>
				<height>1080</height>
				<texture colordiffuse="$VAR[PanelColorVar]" border="15">panels/mediamenu-back.png</texture>
			</control>
			<control type="list" id="5">
				<width>550</width>
				<height>1080</height>
				<orientation>vertical</orientation>
				<itemlayout height="72">
					<control type="image">
						<texture border="30" colordiffuse="$VAR[PanelColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="label">
						<width>220</width>
						<font>Font26_Reg</font>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>20</textoffsetx>
						<align>right</align>
					</control>
					<control type="label">
						<left>220</left>
						<width>320</width>
						<font>Font26_Reg</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>grey</textcolor>
						<haspath>true</haspath>
						<align>left</align>
					</control>
				</itemlayout>
				<focusedlayout height="70">
					<control type="image">
						<texture border="10" colordiffuse="$VAR[HighlightColorVar]">buttons/list-select-focus.png</texture>

					</control>
					<control type="label">
						<width>220</width>
						<font>Font26_Reg</font>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>20</textoffsetx>
						<align>right</align>
					</control>
					<control type="label">
						<left>220</left>
						<width>320</width>
						<font>Font26_Reg</font>
						<label>$INFO[ListItem.Label2]</label>
						<textcolor>grey</textcolor>
						<haspath>true</haspath>
						<align>left</align>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[PicturesBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">220</param>
			</include>
			<include>FloorRight</include>
		</control>
		<!-- Views -->
		<control type="group">
			<include>View50List</include>
		</control>
		<!-- Top Bar -->
		<control type="group">
			<visible>!Skin.HasSetting(PicturesHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$LOCALIZE[1213]</param>
				<param name="icon">pictures.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenu_Common_Top</include>
				<!-- Slideshow -->
				<control type="radiobutton" id="6">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/image.png" />
						<param name="iconoff" value="icons/mediamenu/image.png" />
					</include>
					<label>$LOCALIZE[13317]</label>
					<visible>Container.Content(images)</visible>
				</control>
				<!-- Recursive slideshow -->
				<control type="radiobutton" id="7">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/repeat.png" />
						<param name="iconoff" value="icons/mediamenu/repeat.png" />
					</include>
					<label>$LOCALIZE[13318]</label>
					<visible>Container.Content(images)</visible>
				</control>
				<!-- Randomise -->
				<control type="radiobutton" id="9">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/random.png" />
						<param name="iconoff" value="icons/mediamenu/randomoff.png" />
					</include>
					<label>$LOCALIZE[13319]</label>
					<visible>Container.Content(images)</visible>
				</control>
				<!-- Get more -->
				<control type="radiobutton" id="9061">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/add.png" />
						<param name="iconoff" value="icons/mediamenu/add.png" />
					</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/image/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Open Settings -->
				<control type="radiobutton" id="9062">
					<include content="MediaMenuIconButton">
						<param name="iconon" value="icons/mediamenu/settings.png" />
						<param name="iconoff" value="icons/mediamenu/settings.png" />
					</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,51,52</views>
	<menucontrol>9050</menucontrol>
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[PVRBackgroundVar]</param>
		</include>
		<!-- Views -->
		<include>View50PVRCoverList</include>
		<include>View51PVRSimpleList</include>
		<include>View52PVRInfoList</include>
		<!-- Topbar -->
		<control type="group">
			<visible>!Skin.HasSetting(PVRHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[PVRAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[PVRAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$VAR[BreadcrumbsPVRSearchVar]</param>
				<param name="icon">search.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuPVR</include>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>

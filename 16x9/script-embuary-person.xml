<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>111</defaultcontrol>
	<controls>
		<control type="list" id="10051">
			<include>HiddenList</include>
		</control>
		<control type="group">
			<left>736</left>
			<control type="group">
				<top>16</top>
				<right>25</right>
				<!-- Title -->
				<control type="label">
					<height>50</height>
					<font>Font49_Bold_Caps</font>
					<label>$INFO[Container(10051).ListItem.Label]</label>
					<textcolor>$VAR[PanelTextColorVar]</textcolor>
					<scroll>true</scroll>
				</control>
				<!-- Subtitle -->
				<control type="label">
					<top>52</top>
					<height>40</height>
					<font>Font36_Reg</font>
					<label>$INFO[Container(10051).ListItem.Property(place_of_birth)]</label>
					<textcolor>$VAR[PanelHighlightColorVar]</textcolor>
					<scroll>true</scroll>
				</control>
				<!-- Info -->
				<control type="grouplist">
					<top>105</top>
					<height>30</height>
					<usecontrolcoords>true</usecontrolcoords>
					<orientation>horizontal</orientation>
					<control type="image">
						<visible>!String.IsEmpty(Control.GetLabel(5301))</visible>
						<top>3</top>
						<width>30</width>
						<aspectratio>keep</aspectratio>
						<texture>$VAR[ListViewIcon1Var]</texture>
					</control>
					<control type="label" id="5301">
						<width>auto</width>
						<font>Font30_Reg</font>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[Container(10051).ListItem.Property(age), ,  ]</label>
					</control>
					<control type="image">
						<visible>!String.IsEmpty(Control.GetLabel(5302))</visible>
						<top>3</top>
						<width>30</width>
						<aspectratio>keep</aspectratio>
						<texture>$VAR[ListViewIcon2Var]</texture>
					</control>
					<control type="label" id="5302">
						<width>auto</width>
						<font>Font30_Reg</font>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[Container(10051).ListItem.Property(birthday), ]$INFO[Container(10051).ListItem.Property(deathday), - ]</label>
					</control>
				</control>
				<control type="image">
					<top>157</top>
					<height>4</height>
					<texture border="0,0,220,0" colordiffuse="$VAR[PanelListSeparatorColorVar]">panels/separator.png</texture>
				</control>
				<!-- Image containers -->
				<control type="panel" id="10052">
					<include content="DialogExtraInfo">
						<param name="id">10052</param>
						<param name="buttonid">111</param>
						<param name="label">true</param>
					</include>
				</control>
				<control type="panel" id="10053">
					<include content="DialogExtraInfo">
						<param name="id">10053</param>
						<param name="buttonid">112</param>
						<param name="label">true</param>
					</include>
				</control>
				<control type="panel" id="10054">
					<include content="DialogExtraInfo">
						<param name="id">10054</param>
						<param name="buttonid">113</param>
						<param name="label">true</param>
					</include>
				</control>
				<control type="panel" id="504">
					<visible>Control.HasFocus(114) | Control.HasFocus(504)</visible>
					<include>DialogExtraInfoYoutube</include>
					<content limit="25" target="videos" sortby="file">$INFO[Container(10051).ListItem.Label,plugin://plugin.video.youtube/search/?q=,]</content>
				</control>
				<!-- Buttons -->
				<control type="group" id="9000">
					<control type="grouplist">
						<top>512</top>
						<left>-10</left>
						<right>15</right>
						<onleft>102</onleft>
						<onright>103</onright>
						<onup condition="Control.HasFocus(111)">10052</onup>
						<onup condition="Control.HasFocus(112)">10053</onup>
						<onup condition="Control.HasFocus(113)">10054</onup>
						<ondown>SetProperty(TextViewerHeader,$ESCINFO[Container(10051).ListItem.Label],Home)</ondown>
						<ondown>SetProperty(TextViewerText,$ESCINFO[Container(10051).ListItem.Property(biography)],home)</ondown>
						<ondown>ActivateWindow(1100)</ondown>
						<itemgap>-5</itemgap>
						<orientation>horizontal</orientation>
						<control type="button" id="111">
							<label>$LOCALIZE[342]</label>
							<include>DialogButtonInfo</include>
						</control>
						<control type="button" id="112">
							<label>$LOCALIZE[20343]</label>
							<include>DialogButtonInfo</include>
						</control>
						<control type="button" id="113">
							<label>Images</label>
							<include>DialogButtonInfo</include>
						</control>
						<control type="button" id="114">
							<label>Youtube</label>
							<include>DialogButtonInfo</include>
						</control>
					</control>
				</control>
				<!-- Biography -->
				<control type="button">
					<visible>!String.IsEmpty(Control.GetLabel(4))</visible>
					<top>624</top>
					<width>826</width>
					<height>309</height>
					<label />
					<texturenofocus />
					<texturefocus />
					<onup>9000</onup>
					<onclick>SetProperty(TextViewerHeader,$ESCINFO[Container(10051).ListItem.Label],Home)</onclick>
					<onclick>SetProperty(TextViewerText,$ESCINFO[Container(10051).ListItem.Property(biography)],home)</onclick>
					<onclick>ActivateWindow(1100)</onclick>
				</control>
				<control type="textbox" id="4">
					<include>HiddenObject</include>
				</control>
				<control type="textbox">
					<top>607</top>
					<right>25</right>
					<height>431</height>
					<include>AutoScrollPlot</include>
					<label>$INFO[Container(10051).ListItem.Property(biography)]</label>
				</control>
			</control>
		</control>
		<control type="image">
			<include>AnimationVisibleFade</include>
			<top>15</top>
			<left>15</left>
			<width>706</width>
			<height>1050</height>
			<bordersize>10</bordersize>
			<aspectratio>scale</aspectratio>
			<bordertexture border="10">thumbs/border/706x1050.png</bordertexture>
			<texture background="true" diffuse="diffuse/rounded5-686x1030.png">$INFO[Container(10051).ListItem.Art(thumb)]</texture>
		</control>
	</controls>
</window>
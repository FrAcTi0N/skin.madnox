<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50,54,55,56,80</views>
	<menucontrol>9050</menucontrol>
	<onload condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,backend=True)</onload>
	<controls>
		<!-- Backdrop -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[VideoBackgroundVar]</param>
		</include>
		<control type="group">
			<visible>!Window.IsActive(movieinformation)</visible>
			<include>AnimationInfoDialog</include>
			<!-- Floor -->
			<control type="group">
				<visible>Control.IsVisible(50) | Control.IsVisible(56) | Control.IsVisible(54) | Control.IsVisible(80)</visible>
				<animation effect="slide" end="0,90" time="240" tween="cubic" condition="Control.IsVisible(56)">Conditional</animation>
				<include content="AnimationSlideBottomWindow">
					<param name="slide">220</param>
				</include>
				<include content="AnimationSlideBottomVisible">
					<param name="slide">220</param>
				</include>
				<include>FloorRight</include>
			</control>
			<!-- Views -->
			<control type="group">
				<include>View50List</include>
				<include>View54InfoList</include>
				<include>View55LowList</include>
				<include>View56RightList</include>
				<include>View80Wall</include>
			</control>
			<!-- Media flags -->
			<control type="group">
				<visible>Control.IsVisible(50) | Control.IsVisible(54) | Control.IsVisible(55)</visible>
				<animation effect="slide" end="90,20" time="240" tween="cubic" condition="Control.IsVisible(55)">Conditional</animation>
				<include content="AnimationSlideBottomWindow">
					<param name="slide">111</param>
				</include>
				<include>MediaFlagsRight</include>
			</control>
			<!-- Topbar -->
			<control type="group">
				<visible>!Skin.HasSetting(VideoHideTopBar)</visible>
				<include content="AnimationSlideTopWindow">
					<param name="slide">90</param>
				</include>
				<include content="AnimationSlideTopVisible">
					<param name="slide">90</param>
				</include>
				<include content="TopBar">
					<param name="label">$VAR[BreadcrumbsVideoVar]</param>
					<param name="icon">$VAR[BreadcrumbsVideoIconVar]</param>
				</include>
			</control>
			<!-- Floor Labels -->
			<control type="grouplist">
				<visible>Control.IsVisible(80)</visible>
				<bottom>10</bottom>
				<height>100</height>
				<control type="label">
					<width>auto</width>
					<height>30</height>
					<align>center</align>
					<font>Font34_Reg</font>
					<scroll>true</scroll>
					<textcolor>$VAR[PanelTextColorVar]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<width>auto</width>
					<height>30</height>
					<align>center</align>
					<textcolor>$VAR[PanelHighlightColorVar]</textcolor>
					<label>$INFO[ListItem.Tagline]</label>
				</control>
				<control type="label">
					<width>auto</width>
					<height>30</height>
					<align>center</align>
					<textcolor>$VAR[PanelSubtextColorVar]</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<textoffsetx>30</textoffsetx>
				</control>
			</control>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuCommonTop</include>
				<!-- Watched Toggle -->
				<control type="radiobutton" id="10">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/watch.png</param>
						<param name="iconoff">icons/mediamenu/watch.png</param>
					</include>
					<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.content(seasons) | Container.Content(episodes)</visible>
				</control>
				<!-- PartyMode -->
				<control type="radiobutton" id="16">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/play.png</param>
						<param name="iconoff">icons/mediamenu/play.png</param>
					</include>
					<label>$LOCALIZE[589]</label>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<!-- Unlock Shares -->
				<control type="radiobutton" id="11">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/unlock.png</param>
						<param name="iconoff">icons/mediamenu/lock.png</param>
					</include>
					<label>$LOCALIZE[20336]</label>
					<onclick>mastermode</onclick>
					<selected>System.IsMaster</selected>
					<visible>System.HasLocks</visible>
				</control>
				<!-- Update Library -->
				<control type="togglebutton" id="9061">
					<include>MediaMenuIconToggleButton</include>
					<label>$LOCALIZE[653]</label>
					<onclick>UpdateLibrary(video)</onclick>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<usealttexture>library.isscanningvideo</usealttexture>
				</control>
				<control type="image" id="9062">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture colordiffuse="$VAR[MediaMenuFocusIconColorVar]">icons/mediamenu/refresh.png</texture>
					<visible>Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="image" id="9063">
					<top>-70</top>
					<left>20</left>
					<width>50</width>
					<height>50</height>
					<texture colordiffuse="$VAR[MediaMenuIconColorVar]">icons/mediamenu/refresh.png</texture>
					<visible>!Control.HasFocus(9061) + !Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<control type="label" id="9064">
					<height>20</height>
					<visible>!Container.Content(addons) + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<!-- Get more -->
				<control type="radiobutton" id="9065">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/add.png</param>
						<param name="iconoff">icons/mediamenu/add.png</param>
					</include>
					<label>$LOCALIZE[21452]</label>
					<onclick>ActivateWindow(addonbrowser,addons://more/video/,return)</onclick>
					<visible>Container.Content(addons)</visible>
				</control>
				<!-- Add Node -->
				<control type="radiobutton" id="9066">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/add.png</param>
						<param name="iconoff">icons/mediamenu/add.png</param>
					</include>
					<label>$LOCALIZE[31089]</label>
					<onclick condition="System.HasAddon(plugin.library.node.editor)">ActivateWindow(programs,plugin://plugin.library.node.editor/?ltype=video,return)</onclick>
					<onclick condition="!System.HasAddon(plugin.library.node.editor)">InstallAddon(plugin.library.node.editor)</onclick>
					<visible>Container.Content() + String.IsEmpty(Container.PluginName)</visible>
				</control>
				<!-- Open Settings -->
				<control type="radiobutton" id="9067">
					<include content="MediaMenuIconButton">
						<param name="iconon">icons/mediamenu/settings.png</param>
						<param name="iconoff">icons/mediamenu/settings.png</param>
					</include>
					<label>$LOCALIZE[10140]</label>
					<onclick>Addon.OpenSettings($INFO[Container.PluginName])</onclick>
					<visible>!String.IsEmpty(Container.PluginName)</visible>
				</control>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View551Shift">
		<control type="group">
			<visible>Control.IsVisible(551)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">820</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">820</param>
			</include>
			<control type="fixedlist" id="551">
				<top>313</top>
				<left>-188</left>
				<width>2340</width>
				<height>1000</height>
				<onup>9050</onup>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<pagecontrol>6080</pagecontrol>
				<itemlayout width="310" height="620">
					<control type="group">
						<top>150</top>
						<control type="group">
							<visible>!Skin.HasSetting(ViewsHideFloor)</visible>
							<top>455</top>
							<left>-5</left>
							<width>320</width>
							<height>470</height>
							<control type="image">
								<bordersize>10</bordersize>
								<aspectratio scalediffuse="false">scale</aspectratio>
								<texture diffuse="thumbs/reflect.png" flipy="true" background="true" colordiffuse="ff000000" border="10">buttons/thumb-select-focus.png</texture>
							</control>
							<control type="image">
								<bordersize>10</bordersize>
								<fadetime>TextureFadeTime</fadetime>
								<aspectratio scalediffuse="false">scale</aspectratio>
								<texture background="true" flipy="true" diffuse="thumbs/reflect.png" fallback="DefaultFile.png">$VAR[PosterVar]</texture>
							</control>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<bordersize>10</bordersize>
							<texture colordiffuse="ff000000" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
							<texture background="true" diffuse="diffuse/rounded5-216x324.png">$VAR[PosterVar]</texture>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<texture border="20">thumbs/overlay.png</texture>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="620">
					<control type="group">
						<top>150</top>
						<animation effect="zoom" start="100" end="117.7" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="117.7" end="100" center="auto" time="160">unfocus</animation>
						<control type="group">
							<visible>!Skin.HasSetting(ViewsHideFloor)</visible>
							<top>455</top>
							<left>-5</left>
							<width>320</width>
							<height>470</height>
							<control type="image">
								<bordersize>10</bordersize>
								<aspectratio scalediffuse="false">scale</aspectratio>
								<texture diffuse="thumbs/reflect.png" flipy="true" background="true" colordiffuse="ff000000" border="10">buttons/thumb-select-focus.png</texture>
							</control>
							<control type="image">
								<bordersize>10</bordersize>
								<fadetime>TextureFadeTime</fadetime>
								<aspectratio scalediffuse="false">scale</aspectratio>
								<texture background="true" flipy="true" diffuse="thumbs/reflect.png" fallback="DefaultFile.png">$VAR[PosterVar]</texture>
							</control>
						</control>
						<control type="image">
							<animation effect="fade" start="0" end="100" time="160">focus</animation>
							<animation effect="fade" start="100" end="0" time="160">unfocus</animation>
							<top>-150</top>
							<width>320</width>
							<height>320</height>
							<bordersize>20</bordersize>
							<aspectratio>keep</aspectratio>
							<texture background="true">$VAR[DiscArtVar]</texture>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<bordersize>10</bordersize>
							<texture colordiffuse="ff000000" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
							<texture background="true" diffuse="diffuse/rounded5-216x324.png">$VAR[PosterVar]</texture>
						</control>
						<control type="image">
							<left>-5</left>
							<width>320</width>
							<texture border="20">thumbs/overlay.png</texture>
						</control>
					</control>
				</focusedlayout>
			</control>

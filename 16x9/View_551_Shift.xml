<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View551Shift">
		<control type="group">
			<visible>Control.IsVisible(551)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">910</param>
			</include>
			<control type="fixedlist" id="551">
				<top>440</top>
				<left>-120</left>
				<width>2040</width>
				<height>764</height>
				<onleft>9050</onleft>
				<onright>6080</onright>
				<focusposition>1</focusposition>
				<orientation>horizontal</orientation>
				<pagecontrol>6080</pagecontrol>
				<itemlayout width="320" height="470">
					<control type="image">
						<bordersize>10</bordersize>
						<aspectratio align="center" aligny="center">$PARAM[Aspect]</aspectratio>
						<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
					</control>
					<control type="image">
						<texture border="20">thumbs/frame-rounded5.png</texture>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="470">
					<control type="group">
						<animation effect="zoom" start="100" end="130" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="130" end="100" center="auto" time="160">unfocus</animation>
						<control type="image">
							<bordersize>10</bordersize>
							<aspectratio align="center" aligny="center">$PARAM[Aspect]</aspectratio>
							<texture diffuse="diffuse/rounded5-532x800.png">$VAR[PosterVar]</texture>
						</control>
						<control type="image">
							<texture diffuse="thumbs/frame-rounded5.png" border="20">thumbs/frame-rounded5.png</texture>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!-- <control type="scrollbar" id="6057">
				<right>80</right>
				<top>144</top>
				<bottom>144</bottom>
				<onleft>80</onleft>
			</control> -->
		</control>
	</include>
</includes>
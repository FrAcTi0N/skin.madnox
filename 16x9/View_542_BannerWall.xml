<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View542BannerWall">
		<!-- Background fade -->
		<control type="group">
			<visible>Control.IsVisible(542)</visible>
			<include>AnimationVisibleFade</include>
			<include>AnimationWindowFade</include>
			<control type="image">
				<include>FullScreenDimensions</include>
				<texture colordiffuse="bbffffff">colors/black.png</texture>
			</control>
		</control>
		<!-- Panel -->
		<control type="group">
			<visible>Control.IsVisible(542)</visible>
			<animation effect="slide" end="0,-40" time="240" condition="Skin.HasSetting(ViewsHideTopBar)">Conditional</animation>
			<include>AnimationZoomWindow</include>
			<include>AnimationZoomVisible</include>
			<control type="panel" id="542">
				<top>80</top>
				<left>40</left>
				<width>1840</width>
				<height>1100</height>
				<onleft>9050</onleft>
				<onright>60515</onright>
				<pagecontrol>60515</pagecontrol>
				<viewtype label="$LOCALIZE[31256]">bigicon</viewtype>
				<itemlayout height="130" width="613.3" condition="!Skin.HasSetting(View542SmallIcons)">
					<include content="ViewArtwork">
						<param name="art">$VAR[BannerVar]</param>
						<param name="diffuse">diffuse/rounded5-532x800.png</param>
					</include>
				</itemlayout>
				<focusedlayout height="130" width="613.3" condition="!Skin.HasSetting(View542SmallIcons)">
					<control type="group">
						<animation effect="zoom" start="100" end="110" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="110" end="100" center="auto" time="160">unfocus</animation>
						<control type="image">
							<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<include content="ViewArtwork">
							<param name="art">$VAR[BannerVar]</param>
						<param name="diffuse">diffuse/rounded5-532x800.png</param>
						</include>
					</control>
				</focusedlayout>
				<itemlayout height="101" width="460" condition="Skin.HasSetting(View542SmallIcons)">
					<include content="ViewArtwork">
						<param name="art">$VAR[BannerVar]</param>
						<param name="diffuse">diffuse/rounded5-532x800.png</param>
					</include>
				</itemlayout>
				<focusedlayout height="101" width="460" condition="Skin.HasSetting(View542SmallIcons)">
					<control type="group">
						<animation effect="zoom" start="100" end="115" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="115" end="100" center="auto" time="160">unfocus</animation>
						<control type="image">
							<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<include content="ViewArtwork">
							<param name="art">$VAR[BannerVar]</param>
						<param name="diffuse">diffuse/rounded5-532x800.png</param>
						</include>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60517">
				<right>-20</right>
				<top>0</top>
				<bottom>0</bottom>
				<onleft>517</onleft>
			</control>
		</control>
		<!-- Bottom info/Media flags -->
		<control type="group">
			<visible>Control.IsVisible(542)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
			</include>
			<include>FloorShadowWall</include>
			<include content="ViewCoverFlowBottomInfo">
				<param name="logovisible">View542Logo</param>
			</include>
			<include content="MediaFlagsPanelVideos" condition="Window.IsVisible(MyVideoNav.xml)">
				<param name="left">50</param>
				<param name="right">50</param>
				<param name="bottom">28</param>
			</include>
			<include content="MediaFlagsPanelAudio" condition="Window.IsVisible(MyMusicNav.xml)">
				<param name="left">50</param>
				<param name="right">50</param>
				<param name="bottom">28</param>
			</include>
		</control>
	</include>
</includes>
<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="View540PortraitWall">
		<!-- Background fade -->
		<control type="group">
			<visible>Control.IsVisible(540)</visible>
			<include>AnimationVisibleFade</include>
			<include>AnimationWindowFade</include>
			<control type="image">
				<include>FullScreenDimensions</include>
				<texture>colors/black80.png</texture>
			</control>
		</control>
		<!-- Panel -->
		<control type="group">
			<visible>Control.IsVisible(540)</visible>
			<animation effect="slide" end="0,-40" time="240" condition="Skin.HasSetting(ViewsHideTopBar)">Conditional</animation>
			<include>AnimationZoomWindow</include>
			<include>AnimationZoomVisible</include>
			<control type="panel" id="540">
				<top>80</top>
				<left>40</left>
				<width>1840</width>
				<height>1000</height>
				<onleft>9050</onleft>
				<onright>60540</onright>
				<pagecontrol>60540</pagecontrol>
				<viewtype label="$LOCALIZE[31254]">bigicon</viewtype>
				<itemlayout height="384" width="262.8" condition="!Skin.HasSetting(View540SmallIcons)">
					<control type="group">
						<visible>!Skin.HasSetting(View540VideoCase)</visible>
						<include content="ViewArtwork">
							<param name="diffuse">diffuse/rounded5-243x364.png</param>
						</include>
					</control>
					<control type="group">
						<visible>Skin.HasSetting(View540VideoCase)</visible>
						<include content="ViewArtworkVideoCase">
							<param name="logoheight">27</param>
							<param name="bordersize">16,35,16,18</param>
						</include>
					</control>
				</itemlayout>
				<focusedlayout height="384" width="262.8" condition="!Skin.HasSetting(View540SmallIcons)">
					<control type="group">
						<animation effect="zoom" start="100" end="115" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="115" end="100" center="auto" time="160">unfocus</animation>
						<control type="image">
							<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<control type="group">
							<visible>!Skin.HasSetting(View540VideoCase)</visible>
							<include content="ViewArtwork">
								<param name="diffuse">diffuse/rounded5-243x364.png</param>
							</include>
						</control>
						<control type="group">
							<visible>Skin.HasSetting(View540VideoCase)</visible>
							<include content="ViewArtworkVideoCase">
								<param name="logoheight">27</param>
								<param name="bordersize">16,36,16,18</param>
							</include>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="335" width="230" condition="Skin.HasSetting(View540SmallIcons)">
					<control type="group">
						<visible>!Skin.HasSetting(View540VideoCase)</visible>
						<include content="ViewArtwork">
							<param name="diffuse">diffuse/rounded5-210x315.png</param>
						</include>
					</control>
					<control type="group">
						<visible>Skin.HasSetting(View540VideoCase)</visible>
						<include content="ViewArtworkVideoCase">
							<param name="logoheight">23</param>
							<param name="bordersize">16,33,16,17</param>
						</include>
					</control>
				</itemlayout>
				<focusedlayout height="335" width="230" condition="Skin.HasSetting(View540SmallIcons)">
					<control type="group">
						<animation effect="zoom" start="100" end="115" center="auto" time="160">focus</animation>
						<animation effect="zoom" start="115" end="100" center="auto" time="160">unfocus</animation>
						<control type="image">
							<texture colordiffuse="$VAR[PanelHighlightColorVar]" border="10">buttons/thumb-select-focus.png</texture>
						</control>
						<control type="group">
							<visible>!Skin.HasSetting(View540VideoCase)</visible>
							<include content="ViewArtwork">
								<param name="diffuse">diffuse/rounded5-210x315.png</param>
							</include>
						</control>
						<control type="group">
							<visible>Skin.HasSetting(View540VideoCase)</visible>
							<include content="ViewArtworkVideoCase">
								<param name="logoheight">24</param>
								<param name="bordersize">16,33,16,17</param>
							</include>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60540">
				<animation effect="slide" end="-15" time="200" condition="Control.HasFocus(60540)">Conditional</animation>
				<right>-20</right>
				<top>90</top>
				<bottom>0</bottom>
				<onleft>540</onleft>
				<texturesliderbackground border="2">buttons/scrollbar-nib-back-vertical.png</texturesliderbackground>
			</control>
		</control>
		<!-- Bottom info/Media flags -->
		<control type="group">
			<visible>Control.IsVisible(540)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
			</include>
			<include>FloorShadowWall</include>
			<include content="ViewCoverFlowBottomInfo">
				<param name="logovisible">View540Logo</param>
			</include>
			<include content="MediaFlagsPanelVideos" condition="Window.IsVisible(MyVideoNav.xml)">
				<param name="left">50</param>
				<param name="right">50</param>
				<param name="bottom">28</param>
			</include>
		</control>
	</include>
</includes>
<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1190">
	<!-- <visible>!Window.IsVisible(startup)</visible> -->
	<visible>false</visible>
	<zorder>1</zorder>
	<controls>
		<control type ="image">
			<left>1280</left>
			<width>640</width>
			<texture flipx="true">panels/kodiflix-gradient.png</texture>
		</control>
		<control type="grouplist">
			<right>15</right>
			<top>15</top>
			<width>1920</width>
			<height>1080</height>
			<itemgap>12</itemgap>
			<!-- Video player -->
			<control type="label">
				<height>21</height>
				<textcolor>yellow</textcolor>
				<align>right</align>
				<label>HAS VIDEO</label>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - movies</label>
				<visible>VideoPlayer.Content(movies)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - episodes</label>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - music videos</label>
				<visible>VideoPlayer.Content(musicvideos)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - files</label>
				<visible>VideoPlayer.Content(files)</visible>
			</control>
			\<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - live tv</label>
				<visible>VideoPlayer.Content(livetv)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>VideoPlayer Content - internet stream</label>
				<visible>Player.HasVideo + Player.IsInternetStream</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>PVR is playing tv</label>
				<visible>Pvr.IsPlayingTv</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
			</control>
			<!-- Audio player -->
			<control type="label">
				<height>21</height>
				<textcolor>yellow</textcolor>
				<align>right</align>
				<label>HAS AUDIO</label>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>MusicPlayer Content - live tv</label>
				<visible>MusicPlayer.Content(livetv)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>MusicPlayer Content - files</label>
				<visible>MusicPlayer.Content(files)</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>MusicPlayer Content - internet stream</label>
				<visible>Player.HasAudio + Player.IsInternetStream</visible>
			</control>
			<control type="label">
				<height>21</height>
				<align>right</align>
				<label>PVR is playing radio</label>
				<visible>Pvr.IsPlayingRadio</visible>
			</control>
		</control>
	</controls>
</window>
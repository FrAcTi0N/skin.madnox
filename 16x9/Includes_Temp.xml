			<top>860</top>
			<width>1920</width>
			<height>20</height>
			<texture colordiffuse="$VAR[FloorShadowColorVar]" border="1">panels/floor/shadow.png</texture>
		</control>
		<control type="image">
			<top>480</top>
			<width>1920</width>
			<height>600</height>
			<texture colordiffuse="$VAR[FloorStyleColorVar]" border="1">$VAR[FloorStyleVar]</texture>
		</control>
		<control type="image">
			<top>880</top>
			<width>1920</width>
			<height>200</height>
			<aspectratio align="right" scalediffuse="false">scale</aspectratio>
			<texture colordiffuse="$VAR[FloorTextureColorVar]" border="1">$INFO[Skin.String(FloorTexture.texture)]</texture>

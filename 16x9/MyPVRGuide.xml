<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>9050</menucontrol>
	<views>50</views>
	<controls>
		<!-- Background -->
		<include content="BackgroundDefault">
			<param name="imagepath">$VAR[PVRBackgroundVar]</param>
		</include>
		<!-- Floor -->
		<control type="group">
			<visible>!Skin.HasSetting(SettingsHideFloor)</visible>
			<include content="AnimationSlideBottomWindow">
				<param name="slide">220</param>
				<param name="opencondition">$EXP[PVRAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[PVRAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideBottomVisible">
				<param name="slide">220</param>
			</include>
			<include>FloorDefault</include>
		</control>
		<!-- Panel -->
		<control type="group">
			<include>AnimationZoomWindow</include>
			<include content="PanelDefault">
				<param name="reflect">!Skin.HasSetting(SettingsHideFloor)</param>
			</include>
		</control>
		<!-- Content -->
		<control type="group">
			<visible>Control.IsVisible(50) + !Window.IsActive(pvrguideinfo)</visible>
			<include>AnimationInfoDialog</include>
			<include>AnimationZoomWindow</include>
			<control type="image">
				<top>110</top>
				<left>100</left>
				<right>100</right>
				<height>90</height>
				<texture border="30" colordiffuse="$VAR[DialogListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
			</control>
			<control type="epggrid" id="50">
				<top>140</top>
				<left>100</left>
				<width>1720</width>
				<height>540</height>
				<pagecontrol>6050</pagecontrol>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<timeblocks>20</timeblocks>
				<rulerunit>6</rulerunit>
				<onup>9050</onup>
				<onleft>9050</onleft>
				<onright>6050</onright>
				<viewtype label="">list</viewtype>
				<progresstexture border="0,15,15,15" colordiffuse="$VAR[PanelHighlightColorVar]">pvr/PVR-EpgProgressIndicator.png</progresstexture>
				<rulerlayout height="60" width="60">
					<control type="image">
						<left>400</left>
						<width>4</width>
						<texture colordiffuse="$VAR[DialogListSeparatorColorVar]">panels/line-vertical.png</texture>
					</control>
					<control type="label" id="2">
						<font>Font25_Reg</font>
						<textoffsetx>25</textoffsetx>
						<label>$INFO[ListItem.Label]</label>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<selectedcolor>$VAR[PanelTextColorVar]</selectedcolor>
					</control>
				</rulerlayout>
				<channellayout height="60" width="400">
					<control type="image">
						<texture border="30" colordiffuse="$VAR[DialogListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="label">
						<textoffsetx>25</textoffsetx>
						<label>[COLOR $VAR[PanelTextColorVar]]$INFO[ListItem.ChannelNumberLabel,,. ][/COLOR]$INFO[ListItem.ChannelName]</label>
						<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					</control>
				</channellayout>
				<focusedchannellayout height="60" width="400">
					<control type="image">
						<height>58</height>
						<texture border="10" colordiffuse="$VAR[PanelHighlightColorVar]">buttons/list-select-focus.png</texture>
					</control>
					<control type="image">
						<texture border="30" colordiffuse="$VAR[DialogListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="label">
						<scroll>true</scroll>
						<textoffsetx>25</textoffsetx>
						<label>[COLOR $VAR[PanelTextColorVar]]$INFO[ListItem.ChannelNumberLabel,,. ][/COLOR]$INFO[ListItem.ChannelName]</label>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
					</control>
				</focusedchannellayout>
				<itemlayout width="60" height="60">
					<control type="image" id="14">
						<texture border="30" colordiffuse="$VAR[DialogListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="image">
						<width>4</width>
						<texture colordiffuse="$VAR[DialogListSeparatorColorVar]">panels/line-vertical.png</texture>
					</control>
					<control type="image" id="2">
						<texture border="3" fallback="pvr/epg-genres/0.png">$INFO[ListItem.Property(GenreType),pvr/epg-genres/,.png]</texture>
					</control>
					<control type="label" id="1">
						<visible>ListItem.IsRecording | ListItem.HasTimerSchedule | ListItem.HasTimer | ListItem.HasRecording</visible>
						<left>40</left>
						<textoffsetx>25</textoffsetx>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label" id="1">
						<visible>!ListItem.IsRecording + !ListItem.HasTimerSchedule + !ListItem.HasTimer + !ListItem.HasRecording</visible>
						<textoffsetx>25</textoffsetx>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<texture>$VAR[PVRTimerIconVar]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="60" height="60">
					<control type="image" id="2">
						<texture border="3" colordiffuse="66FFFFFF" fallback="pvr/epg-genres/0.png">$INFO[ListItem.Property(GenreType),pvr/epg-genres/,.png]</texture>
					</control>
					<control type="image">
						<width>4</width>
						<texture colordiffuse="$VAR[DialogListSeparatorColorVar]">panels/line-vertical.png</texture>
					</control>
					<control type="image" id="14">
						<left>2</left>
						<height>58</height>
						<texture border="10" colordiffuse="$VAR[PanelHighlightColorVar]">buttons/list-select-focus.png</texture>
					</control>
					<control type="image" id="14">
						<texture border="30" colordiffuse="$VAR[DialogListSeparatorColorVar]">buttons/list-select-nofocus.png</texture>
					</control>
					<control type="label" id="12345">
						<width>100</width>
						<font>Font36_Icon</font>
						<textoffsetx>25</textoffsetx>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$VAR[PVRTimerIconVar]</label>
					</control>
					<control type="label" id="1">
						<visible>ListItem.IsRecording | ListItem.HasTimerSchedule | ListItem.HasTimer | ListItem.HasRecording</visible>
						<left>40</left>
						<textoffsetx>25</textoffsetx>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label" id="1">
						<visible>!ListItem.IsRecording + !ListItem.HasTimerSchedule + !ListItem.HasTimer + !ListItem.HasRecording</visible>
						<textoffsetx>25</textoffsetx>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<texture>$VAR[PVRTimerIconVar]</texture>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<top>685</top>
				<left>115</left>
				<height>250</height>
				<control type="image">
					<width>250</width>
					<height>250</height>
					<texture border="15">thumbs/thumb-frame.png</texture>
				</control>
				<control type="image">
					<width>250</width>
					<height>250</height>
					<bordersize>10</bordersize>
					<fadetime>TextureFadeTime</fadetime>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture fallback="DefaultAddonPVRClient.png">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="grouplist">
					<top>1</top>
					<left>260</left>
					<width>1420</width>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<height>40</height>
						<font>Font34_Reg</font>
						<label>$INFO[ListItem.EpgEventTitle]</label>
						<textcolor>$VAR[PanelTextColorVar]</textcolor>
					</control>
					<control type="label">
						<height>36</height>
						<font>Font28_Reg</font>
						<label>$INFO[ListItem.Genre]</label>
						<textcolor>$VAR[PanelHighlightColorVar]</textcolor>
					</control>
					<control type="label">
						<height>35</height>
						<font>Font28_Reg</font>
						<label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
						<textcolor>$VAR[PanelSubTextColorVar]</textcolor>
					</control>
					<control type="textbox">
						<top>5</top>
						<height>123</height>
						<label>$INFO[ListItem.Plot]</label>
						<include>AutoScrollPlot</include>
					</control>
				</control>
			</control>
			<control type="scrollbar" id="6050">
				<right>79</right>
				<top>200</top>
				<bottom>400</bottom>
				<onleft>50</onleft>
			</control>
		</control>
		<!-- Topbar -->
		<control type="label" id="29">
			<include>HiddenObject</include>
		</control>
		<control type="label" id="30">
			<include>HiddenObject</include>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(PVRHideTopBar)</visible>
			<include content="AnimationSlideTopWindow">
				<param name="slide">90</param>
				<param name="opencondition">$EXP[PVRAnimationOpenCondition]</param>
				<param name="closecondition">$EXP[PVRAnimationCloseCondition]</param>
			</include>
			<include content="AnimationSlideTopVisible">
				<param name="slide">90</param>
			</include>
			<include content="TopBar">
				<param name="label">$VAR[BreadcrumbsPVRGuideVar]</param>
				<param name="icon">calendar.png</param>
			</include>
		</control>
		<!-- Media Menu -->
		<include>MediaMenuMouseOverlay</include>
		<control type="group">
			<include>MediaMenuCommon</include>
			<control type="grouplist" id="9050">
				<onright>50</onright>
				<onback>50</onback>
				<include>MediaMenuPVR</include>
				<include>MediaMenuCommonBottom</include>
			</control>
		</control>
	</controls>
</window>
